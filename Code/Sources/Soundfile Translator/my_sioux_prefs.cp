ииииииииииииииииии*//*иииии  N O N M E M B E R   F U N C T I O N   D E F I N I T I O N S  иииии*//*	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *	*//*																							*//*		PROCEDURE set_my_sioux_prefs												*//*																							*//*	* * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *	*/void set_my_sioux_prefs(void){	//	Show status line	SIOUXSettings.showstatusline = true;	//	Set tab width to three spaces	SIOUXSettings.tabspaces	=	3;	//	Make the window large enough to fit 63 lines of text that contain 80 characters each	SIOUXSettings.columns	= 80;	SIOUXSettings.rows		= 63;	// Place the window's top left corner at (5,41)	SIOUXSettings.leftpixel	=	5;	SIOUXSettings.toppixel	= 41;}