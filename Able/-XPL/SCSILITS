/*             S C S I   L I T E R A L S*/dcl ScsiBoard    lit '"40000"'; /* bit set in D51 if D24 is there *//* D24 SCSI ports */dcl ScsiSel  lit '"24"'; /* SCSI selection port */dcl ScsiData lit '"24"'; /* SCSI data port */dcl ScsiBus  lit '"25"'; /* SCSI signal bus */dcl ScsiByte lit '"26"'; /* Read/Write a byte from SCSI */dcl ScsiWord lit '"27"'; /* Read/Write a word from SCSI *//* Standard Devices */dcl S.D24         lit '0';               /* Standard D24 board */dcl S.Initiator   lit '6';               /* Standard Initiator ID */dcl S.Target      lit '5';               /* Standard Target ID */dcl S.LUN         lit '0';               /* Standard Target LUN *//* D24 bit masks */dcl S$SelectEnable lit '"H1000"'; /* set this on SCSISEL to enable select function */dcl S$SelMask      lit '"H0F00"'; /* to mask off select bits from SCSISEL */dcl S$RevMask      lit '"HE000"'; /* to mask off revision number from SCSISEL */dcl S$RevShift     lit '13';      /* left shift to get revision number from SCSISEL */dcl S$Arbitrate7   lit '"H200"';  /* set this on SCSIBUS to arbitrate for ID 7*/dcl S$Arbitrate6   lit '"HA00"';  /* set this on SCSIBUS to arbitrate for ID 6 */dcl S$DataMask     lit '"H00FF"'; /* to mask off data bits from SCSIDATA */dcl S$BusMask      lit '"H01FF"'; /* to mask off signal lines from SCSIBUS */dcl S$IntMask      lit '"H0E00"'; /* to mask off interrupt bits from SCSIBUS */dcl S$IntShift     lit '9';       /* left shift to get interrupt bits from SCSIBUS *//* Bit masks for signals on Signal Bus */dcl S$ATN  lit '"H1"';dcl S$BSY  lit '"H2"';dcl S$ACK  lit '"H4"';dcl S$RST  lit '"H8"';dcl S$MSG  lit '"H10"';dcl S$SEL  lit '"H20"';dcl S$C.D  lit '"H40"';dcl S$REQ  lit '"H80"';dcl S$I.O  lit '"H100"';/* Bit masks for Bus Phases */dcl S$BusFree lit '(S$BSY or S$SEL)';dcl S$DataOut lit '(S$BSY)';dcl S$DataIn  lit '(S$BSY or S$I.O)';dcl S$Command lit '(S$BSY or S$C.D)';dcl S$Status  lit '(S$BSY or S$C.D or S$I.O)';dcl S$MessOut lit '(S$BSY or S$MSG or S$C.D or S$ATN)';dcl S$MessIn  lit '(S$BSY or S$MSG or S$C.D or S$I.O)';dcl S$SigMask lit '(S$ATN or S$BSY or S$RST or S$MSG or S$SEL or S$C.D or S$I.O)';/* SCSI Command Codes for all devices */dcl S$TestUnitReady     lit '"H00"';dcl S$RequestSense      lit '"H03"';dcl S$Inquiry           lit '"H12"';dcl S$Copy              lit '"H18"';dcl S$ReceiveDiagnostic lit '"H1C"'; dcl S$SendDiagnostic    lit '"H1D"';/* SCSI Command Codes for Direct Access devices */dcl S$RezeroUnit     lit '"H01"';dcl S$FormatUnit     lit '"H04"';dcl S$ReassignBlocks lit '"H07"';dcl S$Read           lit '"H08"';dcl S$Write          lit '"H0A"';dcl S$Seek           lit '"H0B"';dcl S$ModeSelect     lit '"H15"';dcl S$Reserve        lit '"H16"';dcl S$Release        lit '"H17"';dcl S$ModeSense      lit '"H1A"';dcl S$StartStop      lit '"H1B"';dcl S$PreventAllow   lit '"H1E"';dcl S$ReadCapacity   lit '"H25"';dcl S$ExtendedRead   lit '"H28"';dcl S$ExtendedWrite  lit '"H2A"';dcl S$VerifyWrite    lit '"H2E"';dcl S$Verify         lit '"H2F"';dcl S$ReadLong       lit '"HE8"';dcl S$WriteLong      lit '"HEA"';/* SCSI Command Codes for Sequential Access devices */dcl S$Rewind          lit '"H01"';dcl S$ReadBlockLimits lit '"H05"';dcl S$TrackSelect     lit '"H0B"';dcl S$ReadReverse     lit '"H0F"';dcl S$WriteFileMarks  lit '"H10"';dcl S$Space           lit '"H11"';dcl S$VerifyTape      lit '"H13"';dcl S$RecoverBuffer   lit '"H14"';dcl S$Erase           lit '"H19"';dcl S$LoadUnload      lit '"H1B"';dcl S$DriveTemp       lit '"HE9"';/* SCSI statuses */dcl S$StatMask       lit '"HF00"'; /* Status mask - masks off bits 8-11 *//* General plan for scsi status codes:									*//* "Modern" routines shall:												*//*		1)	Retrun a 0 if the command completed successfully - S$Good	*//*		2)	Return a negative status number if BusConnect fails; e.g.	*//*			see S$ArbFailed through S$BadInitiator						*//*		3)  Return a sense key in the lower half if the scsi status		*//*			code was check condition									*//*		4)	Return the scsi status in the upper half in other case.		*//* That is:																*//*		1)	return value == S$Good or S$GoodConnect ==> OK				*//*		2)  return value < 0 ==> connect failure						*//*		3)	return value >= 256 ==> S$Busy or S$Reserved in upper half	*//*		4)  return value <  256 ==> a Sense Code						*//* SCSI Status Bytes */dcl S$Good           lit '"H00"'; /* Good status */dcl S$CheckCondition lit '"H02"'; /* Check condition (should do a REQUEST SENSE) */dcl S$ConditionMet   lit '"H04"'; /* Condition met/good */dcl S$Busy           lit '"H08"'; /* Device busy */dcl S$Reserved       lit '"H18"'; /* Reservation Conflict *//* SCSI Extended Sense Keys */dcl S$NoSense        lit '"H0"'; /* Everything okay */dcl S$RecoveredError lit '"H1"'; /* Recovered error */dcl S$NotReady       lit '"H2"'; /* Device is not ready */dcl S$MediumError    lit '"H3"'; /* Medium error */dcl S$HardwareError  lit '"H4"'; /* Error with hardware */dcl S$IllegalRequest lit '"H5"'; /* Illegal parameter in command */dcl S$UnitAttention  lit '"H6"'; /* Unit attention */dcl S$DataProtect    lit '"H7"'; /* Device cannot be written to */dcl S$BlankCheck     lit '"H8"'; /* Device encountered a blank block while reading */dcl S$VendorUnique   lit '"H9"'; /* Vendor unique sense code */dcl S$CopyAborted    lit '"HA"'; /* Copy command aborted */dcl S$VolumeOverflow lit '"HD"'; /* Device has reached end of media *//* Statuses returned by SCSICONNECT */dcl S$GoodConnect    lit  '0'; /* Returned by SCSICONNECT if a good connection is made */dcl S$ArbFailed      lit '-1'; /* Returned by SCSICONNECT if arbitration failed */dcl S$SelFailed      lit '-2'; /* Returned by SCSICONNECT if selected device did not respond */dcl S$IdentFailed    lit '-3'; /* Returned by SCSICONNECT if the Identify message is not sent */dcl S$D24NotThere    lit '-4'; /* Returned by SCSICONNECT if D24 board could not be selected */dcl S$BadBusState    lit '-5'; /* Returned by SCSICONNECT if SCSI bus is a a weird state */dcl S$BadInitiator   lit '-6'; /* Returned by SCSICONNECT if Initiator passed is <> 6 or 7 */dcl S$DeviceBusy     lit 'shl(S$Busy,     8)';  /* Returned by SCSICONNECT if Busy status is returned */dcl S$DeviceReserved lit 'shl(S$Reserved, 8)';  /* Returned by SCSICONNECT if Reservation Conflict status is returned *//* SCSI messages */dcl S$CmdComplete    lit '"H00"'; /* Command Complete message */dcl S$SavePointer    lit '"H02"'; /* Save Data Pointer message */dcl S$RestorePointer lit '"H03"'; /* Restore Data Pointer message */dcl S$Disconnect     lit '"H04"'; /* Disconnect message */dcl S$AbortCmd       lit '"H06"'; /* Message sent to abort a command */dcl S$LinkCmd        lit '"H0A"'; /* Linked command complete */dcl S$ResetDev       lit '"H0C"'; /* Message sent to reset a particular device *//* DTD errors: -10 to -29 *//* More SCSI errors: -30 to -39 *//* OS errors: -40 to -59 */dcl S$BadDevice lit '-40'; 	/* S$SENSEKEY set to this if a bad or unconfigured device passed to SCSIIO 	*/							/* happens when reading off end of disk...  e.g. read catalog of unavail	*/							/* hard disk...																*/							/* Winchester disk errors: -60 to -79 *//* Tape errors: -80 to -99 */dcl S$NotLoaded lit '-80'; /* tape drive not loaded *//* Optical disk errors: -100 to -119 *//* Floppy disk errors: -120 to -139 *//* Reserved: -140 to -199 */