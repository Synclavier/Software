/* Optical Disk Management Literals *//***************************************//*                                     *//*   Optical Disk Record Definitions   *//*                                     *//***************************************//* Header Record Definitions */dcl H$Magic        lit '0';  /* magic number/revision level */dcl H$Name         lit '1';  /* first word of volume name */dcl H$Date         lit '17'; /* creation date */dcl H$Time         lit '18'; /* creation time */dcl H$LS_DirStart  lit '19';dcl H$MS_DirStart  lit '20'; /* sector start of directory */dcl H$LS_DirLen    lit '21';dcl H$MS_DirLen    lit '22'; /* sector length of directory */dcl H$LS_DataStart lit '23';dcl H$MS_DataStart lit '24'; /* sector start of data area */dcl H$LS_DataLen   lit '25';dcl H$MS_DataLen   lit '26'; /* sector length of data area */dcl H$Serial       lit '255'; /* serial number */dcl H$Caption      lit '256'; /* beginning of caption string *//* Header Record Lengths */dcl H#Name_Max     lit '16'; /* max no. words in name */dcl H#Caption_Max  lit '255'; /* max no. words in caption */dcl H#Rec_Length   lit '512'; /* length of header record *//* Entry Record Definitions */dcl E$$Type        lit '0';  /* Entry type */dcl E$$Name        lit '1';  /* first word of file name */dcl E$Date         lit '17'; /* creation date */dcl E$Time         lit '18'; /* creation time */dcl E$LS_SecStart  lit '19';dcl E$MS_SecStart  lit '20'; /* sector start of file */dcl E$LS_SecLen    lit '21';dcl E$MS_SecLen    lit '22'; /* sector length of file */dcl E$LS_WordLen   lit '23';dcl E$MS_WordLen   lit '24'; /* word length of file */dcl E$File_Type    lit '25'; /* file type */dcl E$Prev_Entry   lit '239'; /* previous entry */dcl E$OldName      lit '240'; /* old name (used with rename entries) */dcl E$Header       lit '256'; /* first word of sound file header *//* Entry Record Types */dcl E#Dir_Entry    lit '0'; /* Normal directory entry */dcl E#Rename_Entry lit '1'; /* Entry to rename a file */dcl E#Delete_Entry lit '2'; /* Entry to delete a file */dcl E#Bitmap_Entry lit '3'; /* Bitmap entry *//* Entry Record Lengths */dcl E#Name_Max     lit '16'; /* max no. words in name */dcl E#Header_Max   lit '256'; /* max no. words in sound file header */dcl E#Rec_Length   lit '512'; /* length of entry record *//* Statistics Record Definitions */dcl Stat$Dir_Used   lit '0'; /* no. directory entries used */dcl Stat$Dir_Free   lit '1'; /* no. directory entries free */dcl Stat$Dir_Start  lit '2'; /* first free directory entry */dcl Stat$MS_Used    lit '3'; /* no. data sectors used */dcl Stat$LS_Used    lit '4';dcl Stat$MS_Free    lit '5'; /* no. data sectors free */dcl Stat$LS_Free    lit '6';dcl Stat$MS_Start   lit '7'; /* first free data sector */dcl Stat$LS_Start   lit '8';dcl Stat#Rec_Length lit '9'; /* no. words in statistics record *//***************************************//*                                     *//*    Index File Record Definitions    *//*                                     *//***************************************//* Header Record Definitions *//* NOTE: The basic format of the Index File Header Record is the same         as the Optical Disk Header Record. There are some additional         fields, however, and these are defined below: */dcl H$LS_CatStart  lit '27';dcl H$MS_CatStart  lit '28'; /* sector start of category list */dcl H$LS_CatLen    lit '29';dcl H$MS_CatLen    lit '30'; /* sector length of category list */dcl H$CatLines     lit '236'; /* start of category lines array, gives no. lines required for different values of names/line */dcl H$Stride       lit '252'; /* file list index stride */dcl H$EntryCount   lit '253'; /* no. directory entries on optical disk */dcl H$FileCount    lit '254'; /* no. files in file list */dcl H$CatCount     lit '255'; /* no. categories in category list */dcl H#Index_Length lit '1024'; /* no. words in file list index */dcl H#NameLineMax  lit '16';   /* maximum no. names per line *//* File List Record Definitions */dcl L$Name         lit '0';  /* first word of file name */dcl L$LS_SecStart  lit '8';dcl L$MS_SecStart  lit '9'; /* sector start of file */dcl L$LS_SecLen    lit '10';dcl L$MS_SecLen    lit '11'; /* sector length of file */dcl L$LS_WordLen   lit '12';dcl L$MS_WordLen   lit '13'; /* word length of file */dcl L$File_Type    lit '14'; /* file type */dcl L$Dir_Entry    lit '15'; /* directory entry number (on volume) */dcl L$Sample_Rate  lit '16'; /* sampling rate (kHz * 10) */dcl L$Flags        lit '17'; /* sound file flags */dcl L$Left         lit '29'; /* pointer to left subtree */dcl L$Right        lit '30'; /* pointer to right subtree */dcl L$List         lit '31'; /* pointer to data list */dcl L$Caption      lit '32'; /* beginning of partial sound file caption string *//* File List Record String Lengths */dcl L#Name_Max     lit '8'; /* max no. words in file name */dcl L#Caption_Max  lit '31'; /* max no. words in sound file caption */dcl L#Rec_Length   lit '64'; /* length of file list record *//* Optical error codes returned by C#STATUS */dcl e#bad_volume      lit '1000'; /* volume header in incorrect format */dcl e#bad_index       lit '1001'; /* index file header in incorrect format */dcl e#no_index        lit '1002'; /* no index file open for this volume */dcl e#volume_changed  lit '1003'; /* volume changed, need to remount */dcl e#not_uptodate    lit '1004'; /* current index file not up to date with currently mounted volume */dcl e#formatted       lit '1005'; /* volume already formatted (returned by Optical_Format) */dcl e#record_full     lit '1006'; /* no more room in record area (returned by Update_Index_File) */dcl e#stack_full      lit '1007'; /* no more room on stack (returned by Update_Index_File) */dcl e#not_initialized lit '1008'; /* 5-inch media has never been initialized with FORMCOPY *//* Size of disk reserved for header re-writes: */dcl HeaderGapSize lit '100'; /* no. entries in the header gap */