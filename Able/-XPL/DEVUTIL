/* Device utilities:.    FLOPPY (level)              		- returns TRUE if the specified LEVEL is a floppy.    WINCHESTER (level)          		- returns TRUE if the specified LEVEL is a Winchester.    TAPE (level)                		- returns TRUE if the specified LEVEL is a tape.    OPTICAL (level)             		- returns TRUE if the specified LEVEL is an optical.    TRIGGER_MOTOR (level)       		- triggers the motor on the specified floppy.    DISK_CHECK (level)          		- checks if a disk is in the specified drive.    GET_DEVICE (devname, tape)  		- returns level of DEVNAME; ignores tapes if TAPE is false.    FIND_TYPE (D107_#, drive)   		- polls IMI Winchester to determine its type.    POLL_WINCHESTERS (config, len) 	- returns IMI Winchester configuration (LEN is length of CONFIG).    FIND_OPTICAL (devadr)       		- detects what type of optical drive is on system.    FIND_WIN_SIZE (devadr, cap, inq) 	- stores capacity and inquiry info of given SCSI winchester in config area provided.    POLL_SCSI (config, len)     		- returns SCSI configuration (LEN is length of CONFIG)*/library ':-xpl:libs:devutil';dcl d#protect 			lit '"2"';	/* set in value returned by DISK_CHECK if disk is write-protected	*/dcl INQ_BUF_SIZE_BYTES	lit '44';	/* required size for FIND_WIN_SIZE inq data buffer					*/dcl NAM_BUF_SIZE_BYTES  lit '24';	/* buffer into which to retrieve scsi name							*/dcl floppy           proc(fixed) returns(boolean) external; /* return TRUE if the specified LEVEL is a floppy */dcl winchester       proc(fixed) returns(boolean) external; /* return TRUE if the specified LEVEL is a winchester */dcl tape             proc(fixed) returns(boolean) external; /* return TRUE if the specified LEVEL is a tape */dcl optical          proc(fixed) returns(boolean) external; /* return TRUE if the specified LEVEL is an optical */dcl trigger_motor    proc(fixed) external;					/* start up floppy motor */dcl disk_check       proc(fixed) returns(boolean) external; /* check for a disk in LEVEL */dcl get_device       proc(fixed array, boolean) returns(fixed) external; /* accept a device specifier and return its level number */dcl find_type        proc(fixed, fixed) external;			/* find type code of winchester */dcl poll_winchesters proc(fixed array, fixed) external;		/* returns list of Winchesters in the system */dcl find_optical     proc(fixed) returns (fixed) external;	/* find type of optical device on system */dcl find_win_size    proc(fixed, fixed, array, array) returns(fixed) external; /* find size of SCSI winchester */dcl poll_scsi        proc(fixed array, fixed) external;		/* returns list of SCSI Winchesters in the system */dcl fetch_inq_name   proc(fixed, array) external;			/* fetch device name via inquiry */dcl fetch_level_name proc(fixed, array) external;			/* fetch name of level via inquiry */dcl Chain_Prob_Adr     fixed external;dcl Set_Win_Chain_Size proc(fixed) returns (fixed) external;dcl win_siz     data external; /* size (in cylinders) of Winchesters */dcl win_cyl     data external; /* sectors/cylinders of Winchesters */dcl maxi_config data external; /* maxifloppy  config */dcl mini_config data external; /* minifloppy  config */dcl dmin_config data external; /* double mini config */dcl smin_config data external; /* super mini config */