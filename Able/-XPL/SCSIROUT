/* SCSI device drivers:..  READDATA/WRITEDATA:.     Automatically read or write a SCSI Winchester when this file is inserted...  BUSCONNECT (DAdr):.     This procedure is used to connect to the given device on the SCSI.     bus.  It simply calls ScsiConnect until the connection is made or.     a fatal error occurs.  The connection status is returned...  SCSICONNECT (D24ID, InitiatorID, TargetID, TargetLUN):.     Connect to the SCSI bus on D24ID.  Connect to device TARGETID/TARGETLUN.     with INITIATORID...  SCSIABORT:.     Abort the current SCSI command.  Will RESET the SCSI bus if the.     ABORT fails...  SCSIRESET:.     Reset the SCSI bus...  SCSISIGNALABORT:.     Force READDATA/WRITEDATA or SCSIFORMAT to abort...  SCSIIO (MS_Sec, LS_Sec, Bufptr, Length, StartSector, StartWord, Op):.     Perform SCSI I/O operation...  MAPSECTOR (MSW, LSW, Device):.     Map logical sector MSW|LSW on DEVICE to a physical sector number/drive.*/insert ':-xpl:scsilits';dcl ScsiSignalAbort proc external; /* Force READDATA/WRITEDATA to abort a pending read/write operation	*/dcl ScsiAbort       proc external; /* Abort any pending command on the SCSI bus */dcl ScsiReset       proc external; /* Reset the SCSI bus */dcl ScsiConnect     proc(fixed, fixed, fixed, fixed) returns (fixed) external;	/* Connect to SCSI bus	*/dcl BusConnect      proc(fixed) returns (fixed) external;						/* Connect to SCSI bus	*/dcl DataIn          proc(fixed array) external;			/* get data as long as Data In phase is on bus 	*/dcl DataOut         proc(fixed array) external;			/* send data as long as Data In phase is on bus */dcl RequestSense    proc(fixed,fixed,fixed array) returns (fixed) external;		/* get sense key		*/dcl GetStatus       proc(fixed) returns (fixed) external;						/* get status of cmd 	*/dcl StartStopUnit   proc(fixed,fixed,fixed) returns (fixed) external;			/* issue start/stop		*/dcl ReadCapacity    proc(fixed,fixed array) returns (fixed) external;			/* get cap & blk size   */dcl TestUnitReady   proc(fixed) returns (fixed) external;						/* see if unit is ready */dcl ScsiIO          proc(fixed, fixed, fixed, fixed, fixed, fixed, fixed) external; /* SCSI Input and Output */dcl MapSector       proc(fixed, fixed, fixed) returns (fixed) external; /* Map a logical sector to a physical drive/sector */dcl S$SenseKey      fixed external; /* Extended sense key from last SCSI read/write */dcl S$BusConnectLUN fixed external; /* Lun published by Buss Connect *//* Variables returned by MAPSECTOR: */dcl (PhySecMSW, PhySecLSW) fixed external; /* Physical sector */dcl (RemSecMSW, RemSecLSW) fixed external; /* Remaining sectors *//* UnitAttention management */dcl GlobalSenseBuffer    array external;		/* published for error recovery					*/dcl DeviceBlockSize      array external;		/* holds block size for 4 boards * 8 devices 	*/dcl UnitAttentionOccured array external;		/* set upon unit attention						*/dcl ComputeSCSIIndex	proc (fixed) returns (fixed) external;dcl GetCachedBlockSize  proc (fixed) returns (fixed) external; /* Quickly get block size for device */