/* Tape drive literal declarations *//* general tape literals */dcl tape_drive     lit '"030"'; /* device address for cartridge tape drive */dcl dir_size       lit  '1024'; /* the directory block is 1K words long */dcl block_size     lit  '4096'; /* a standard block is 4K words long */dcl max_block_size lit  '8192'; /* maximum block size is 8K words */dcl retry_max      lit    '10'; /* retry I/O operations ten times */dcl select_leot    lit '"H80"'; /* set this bit to position tape at LEOT of track (TRACK_SELECT) */dcl tapeblock      lit 'shl(block_size, 1)'; /* tape block size (bytes) */dcl tapespeed      lit '"H2"'; /* 2 = high speed, 1 = low speed */dcl tapedensity    lit '"H3"'; /* 3 = 6250 bpi GCR, 2 = 1600 bpi PE */dcl tapebuffer     lit '"H1"'; /* 1 = use buffer, 0 = don't use buffer */dcl sensemax       lit   '40'; /* maximum number of sense bytes returned in TAPE_SENSE *//* procedure parameters and error codes */dcl sign_bit lit '"H8000"'; /* the sign bit (used in return values to signify parity errors) */dcl no_cbsy  lit '"H0100"'; /* returned by RECEIVE_ARGUMENT if CBSY isn't asserted */dcl llp      lit   'false'; /* passed to SELECT to position tape at logical load point */dcl leot     lit    'true'; /* passed to SELECT to position tape at logical end-of-tape *//* tape drive interface definitions (all are high true logic values) */dcl idle        lit '"H0000"'; /* remove data from bus (write only) */dcl data_parity lit '"H01FF"'; /* data and parity mask */dcl data_mask   lit '"H00FF"'; /* data mask (both host and formatter) */dcl parity      lit '"H0100"'; /* odd parity bit (both host and formatter) */dcl drdy        lit '"H0200"'; /* data ready (write only) */dcl dbsy        lit '"H0200"'; /* data busy (read only) */dcl creq        lit '"H0400"'; /* command request (write only) */dcl cbsy        lit '"H0400"'; /* command busy (read only) */dcl fclr        lit '"H0800"'; /* clear formatter (write only) */dcl strb        lit '"H0800"'; /* strobe (read only) */dcl cmon        lit '"H1000"'; /* cable monitor (read only) */dcl strobe      lit '"H2000"'; /* polled strobe (read only) *//* $page *//* tape drive command operands */dcl identity           lit '"H00"'; /* sense identity */dcl configuration      lit '"H01"'; /* sense configuration */dcl sense_status       lit '"H02"'; /* sense status */dcl rewind_tape        lit '"H03"'; /* rewind */dcl load_tape          lit '"H04"'; /* load */dcl unload_tape        lit '"H05"'; /* unload */dcl select_track       lit '"H06"'; /* track select */dcl erase_tape         lit '"H07"'; /* erase to eot */dcl forward_space_tape lit '"H08"'; /* forward space */dcl reverse_space_tape lit '"H09"'; /* reverse space */dcl forward_space_file lit '"H0A"'; /* forward space file */dcl reverse_space_file lit '"H0B"'; /* reverse space file */dcl read_record        lit '"H0C"'; /* read record */dcl write_record       lit '"H0D"'; /* write record */dcl write_extended     lit '"H0E"'; /* write record extended */dcl write_file_mark    lit '"H0F"'; /* write filemark */dcl write_fmx          lit '"H10"'; /* write filemark extended */dcl edit_record        lit '"H11"'; /* edit record */dcl fixed_erase        lit '"H12"'; /* fixed three inch erase *//* status word (summary status byte in LSB, position status byte in MSB) */dcl not_ready       lit '"H0080"'; /* drive not ready (improperly loaded cartridge) */dcl drive_fault     lit '"H0040"'; /* drive fault */dcl no_cartridge    lit '"H0020"'; /* no cartridge in drive */dcl formatter_error lit '"H0010"'; /* formatter failed self-test */dcl command_error   lit '"H0008"'; /* illegal function code */dcl parity_error    lit '"H0004"'; /* parity error on data sent to formatter */dcl length_error    lit '"H0002"'; /* record too long (> 16K) on write */dcl data_error      lit '"H0001"'; /* CRC or format error detected on tape */dcl track_mask      lit '"HF000"'; /* track select mask (defines currently selected track) */dcl file_mark       lit '"H0800"'; /* positioned at a file mark */dcl end_of_tape     lit '"H0400"'; /* positioned at logical end of tape */dcl load_point      lit '"H0200"'; /* positioned at logical load point */dcl write_protect   lit '"H0100"'; /* tape is write protected *//* decoded status returns (from DECODE) */dcl position_mask     lit '"HFF00"'; /* position byte mask */dcl status_mask       lit '"H00FF"'; /* status byte mask to pull out decoded/undecoded status */dcl s#no_error        lit  '0'; /* no error occurred during the operation */dcl s#not_ready       lit  '1'; /* the drive isn't ready yet (just powered up or just unloaded) */dcl s#not_loaded      lit  '2'; /* the tape isn't loaded */dcl s#no_cartridge    lit  '3'; /* no cartridge in drive */dcl s#parity_error    lit  '4'; /* a parity error was detected during command or data transmission */dcl s#data_error      lit  '5'; /* a data (CRC) error was detected on the tape */dcl s#broken_tape     lit  '6'; /* broken tape or tape off reel (or at physical end of tape) */dcl s#drive_fault     lit  '7'; /* tape drive fault detected */dcl s#inoperative     lit  '8'; /* formatter failed on-line self test (LOAD only) */dcl s#no_data         lit  '9'; /* no data at logical end of tape (READ only) */dcl s#write_protected lit '10'; /* tape is write protected (WRITE only) */dcl s#unknown         lit '11'; /* unknown error */dcl s#bad_device      lit '12'; /* device not tape drive */dcl s#select_failed   lit '13'; /* selection failed on SCSI bus */dcl s#d24_missing     lit '14'; /* d24 board not present on system */dcl s#bad_initiator   lit '15'; /* initiator not 6 or 7 */dcl s#illegal_request lit '16'; /* illegal parameter in SCSI command */dcl s#maximum         lit '16'; /* number of defined errors *//* catalog format of file location */dcl track_shift lit      '12'; /* shift the sector number this many bits to the left to get track */dcl file_mask   lit '"H0FFF"'; /* AND the sector number with this to get the file number */