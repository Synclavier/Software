/* file: -xpl:literals            *//* $subtitle Literal Declarations */dcl boolean      lit        'fixed'; /* document our flags as such */dcl pointer      lit        'fixed'; /* and our pointers */dcl true         lit            '1'; /* a boolean TRUE */dcl false        lit            '0'; /* a boolean FALSE */dcl forever      lit 'while (true)';dcl indefinitely lit 'while (true)';/* common devices */dcl r0  lit '"300"'; /* register zero - (usually) free accumulator */dcl r12 lit '"312"'; /* register 12 - usually free (stack manipulation) */dcl r13 lit '"313"'; /* register 13 - always free */dcl r14 lit '"314"'; /* register 14 - current machine state */dcl r15 lit '"315"'; /* register 15 - stack pointer */dcl nop lit '"324"'; /* no-op destination (Absolute Transfer Never) */dcl pcw lit '"001"'; /* processor control word */dcl d03 lit '"003"';dcl d16 lit '"016"';dcl r0i   lit '"320"'; /* r0 then increment */dcl mr0   lit '"340"'; /* memory r0 */dcl mr0i  lit '"360"'; /* memory r0 then increment - used for buffering via r0 */dcl r13i  lit '"333"'; /* r13 then increment */dcl mr13  lit '"353"'; /* memory r13 */dcl mr13i lit '"373"'; /* memory r13 then increment - used for buffering via r13 *//* opcodes for common devices */dcl reset_timer lit '"HFFFF"'; /* reset the d16 timer */