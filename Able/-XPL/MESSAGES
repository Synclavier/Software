/* MESSAGES - Routines for SCSI and Catalog Routine error messages *//* Module for handy error message contruction routines */dcl MESSAGE_BUF_SIZE	lit '128';	/* max number of bytes allowed in a message */dcl copy.error.message				proc (array, array) external;	/* source, dest	*/dcl add.error.message				proc (array, array) external;	/* source, dest */dcl get_sense_code_message 			proc(fixed,  array) external;dcl get_cat_code_message   			proc(fixed,  array) external;dcl add_optical_sense_code_message	proc(fixed,  array) external;dcl add_optical_cat_code_message	proc(fixed,  array) external;library ':-xpl:libs:messages';