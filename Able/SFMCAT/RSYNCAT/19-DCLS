   /* number of coefs/frame for timbre in memory */dcl ncoefs.use         fixed;    /* number of coefs to use in waveforms */dcl pitch.window       fixed;    /* percent deviation to allow in cycle extractor */dcl track.pitch        boolean;  /* set true to follow pitch deviations */dcl use.phase          boolean;  /* set true to use phase info in waves */dcl noise.floor        fixed;    /* spectral noise floor (0-1000) */dcl partial.tuning     fixed;    /* partial tuning freq * 10 */dcl pcn                floating; /* octave.pitch class number of sound */dcl timbre.name (4)    fixed;    /* string format of current timbre name */dcl float.peak      (max.frames) floating; /* used to hold intermediate peak values */dcl analysis.status (max.frames) fixed;    /* holds status of analysis for each frame *//* literals for analysis errors */dcl pitch.err  lit '1'; /* extracted pitch outside of specified window */dcl band.limit lit '2'; /* had to limit harmonics to extract */dcl length.err lit '4'; /* waveform was too long to do DFT on */