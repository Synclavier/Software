 */insert ':sfmcat:08-symbl'; /* SFM symbol procedure                 */insert ':sfmcat:09-files'; /* SFM utility catalog procedures       */  /* Analysis and Synthesis Routine Insert Files                   */insert ':sfmcat:rsyncat:19-dcls';  /* global literal and variable dcls           */insert ':sfmcat:rsyncat:20-xmem';  /* routines and dcls for external memory      */insert ':sfmcat:rsyncat:20-misc';  /* miscellaneous routines                     */insert ':sfmcat:rsyncat:21-calcw'; /* fast CALCWAVE procedures                   */insert ':sfmcat:rsyncat:22-disk';  /* disk related routines                      */insert ':sfmcat:rsyncat:23-syn';   /* Synclavier timbre and RTP overlay routines */insert ':sfmcat:rsyncat:24-anal1'; /* analysis routines -- part 1                */insert ':sfmcat:rsyncat:24-anal2'; /* analysis routines -- part 2                */insert ':sfmcat:rsyncat:25-menu';  /* menu routines and driver                   */insert ':sfmcat:rsyncat:26-init';  /* startup and initialization code            */