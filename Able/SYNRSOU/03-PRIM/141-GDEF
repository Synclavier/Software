/* 141-GDEF  $TITLE  Definitions for D134 Guitar Interface *//*   11/04/88 - tss - added AXE.HOLD.MODE dcl   8/15/86 - CJ - NEW INFO   8/07/86 - eeg - removed forward declarations, moved this file to 03-prim to be compiled with gprimods   5/15/86 - "official" creation of release-M modules*//*The real time clock interrupt routine scans the raw data from theguitar interface (this allows the pitch filters incorporated thereinto operate at a constant rate).  When a new guitar note is detected, thefollowing variables are used to communicate with the main Synclavierprogram: */dcl (new.string.list) (new.max-1) fixed public;  /* a list of new strings notes to start */dcl (new.in,new.out,s.new.in)     fixed public;  /* pointers into this list */dcl (string.done)                 fixed public;  /* used only by upper routines */dcl (next.string.done)            fixed public;dcl (new.string.decays)           fixed public;dcl onthr  fixed public; /* on threshold */dcl offthr fixed public; /* off threshold */dcl throfs fixed public; /* threshold offset */dcl thrdat fixed public; /* raw threshold data */dcl (gvol,grte,gsus,gholdsw,pgholdsw) fixed public;dcl (axe.hold.mode)                   fixed public;dcl (string.active)           (5) fixed public; /* set true when string actually active */dcl (p.per,pp.per,ppp.per)    (5) fixed public; /* holds previous periods */dcl (pppp.per,ppppp.per)      (5) fixed public; /* very previous periods */dcl (pk.vol,c.vol,p.vol)      (5) fixed public; /* holds peak, current amd previous volume readings */dcl (c.per)                   (5) fixed public; /* current period */dcl (vn.range)                (5) fixed public; /* very narrow range */dcl (m.range,w.range)         (5) fixed public; /* medium and wide ranges */dcl (n.above,n.below)         (5) fixed public; /* counters */dcl (num.over)                (5) fixed public;dcl (on.limit)                (5) fixed public; /* additional on threshold */dcl (cycle.counter)           (5) fixed public; /* counts cycles - use for no transient filter */dcl (open.strings)            (5) fixed public; /* holds synclavier II units of open string pitches */dcl (standard.tuning) data    public (2389,1963,1621,1195,768,341);   /* synclavier II units of E-A-D-G-B-E tuning */dcl (string.pitch)            (5) fixed public; /* current actual vibration pitch */dcl (string.time)             (5) fixed public; /* kbd.milliseconds of string start */dcl (max.per)  data public (3500,4700,5900,7800,10500,14000); /* max periods for each string */dcl (gswitchu,old.gswitchu,old.thr) fixed public;dcl (gswitchl,old.gswitchl)         fixed public;/* device 134 guitar interface */dcl g.split.loc                   fixed public; /* guitar split point (string#) */dcl tuning.info           fixed public;dcl tuning.error          fixed public;dcl cur.st                fixed public;dcl cur.stbank            fixed public;dcl tuning.bank.in.memory fixed public;dcl tuning.bank(47)  fixed public;