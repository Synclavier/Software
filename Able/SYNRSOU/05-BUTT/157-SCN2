/* 157-SCN2  $SUBTITLE   END OF 'SCANDATA' *//*   10/24/88 - TSS - Put call to FLUSH.VK.DISPLAY.TO.TERMULATORS into PANEL.RESCAN   11/12/87 - MWH - Make timer comparisons unsigned to fix "30 sec hang"   05/15/86 - "official" creation of release-M modules*//* FINISH OFF 'SCANDATA' - PUT HERE TO SIMPLIFY INSERT FILE PROCESSING */	TOGGLE	= TOGGLE XOR 1;	/* FLIP BIT FOR NEXT SCAN */END SCANDATA;						/* END OF SCANDATA ROUTINE PUT HERE TO SIMPLIFY INSERT FILES */PANEL.RESCAN:PROC PUBLIC;		/* PROCEDURE TO ALWAYS RESCAN */	TOGGLE	= 0;					/* CLEAR FLAG   */	LAST.SCAN.TIME	= REAL.MILLISECONDS;	CALL SCANDATA;					/* SCAN */	/* Force an immediate update to the VK display on remote devices	*/	/* to provide an immediate update of the VK window display while	*/	/* we are loading sequences, timbre banks, etc.							*/	call Flush.VK.Display.To.Termulators;END PANEL.RESCAN;