/* MAINDCL - some main program routines are needed by other *//* modules.   They are:                                     */dcl loop                     fixed         EXTERNAL;dcl func                     fixed         EXTERNAL;dcl dtd.is.ready.for.stacking fixed        EXTERNAL;dcl pwlen                    fixed         EXTERNAL;dcl handle.ria.change        proc  (fixed) EXTERNAL;dcl MAINLOOP                 proc  (array, fixed) EXTERNAL;dcl dig.xfer.mode            fixed EXTERNAL;dcl new.speed                fixed EXTERNAL;dcl new.speed.time           fixed EXTERNAL;dcl prior.speed              fixed EXTERNAL;dcl (poly.buffs.in.use)      fixed EXTERNAL;dcl (play,recd,move,pnch)    fixed EXTERNAL;  /* synclav motion controls */dcl trig                     fixed EXTERNAL; /* set trig = 1 to start internal     */dcl write.magic.tracks       fixed EXTERNAL; /* re-write magic sector for this trk    */dcl chan.on                  array EXTERNAL; /* 0: off 1: playback 2: input  */library ':LOD:LODLIBS:MAINLIB';