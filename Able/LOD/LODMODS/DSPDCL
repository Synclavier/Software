/* DSPDCL - Variables for DSP, TSM, WAVE DISPLAY */dcl calculating.compressed fixed EXTERNAL;   /* state of generating wave display   */dcl (comp.start)        array EXTERNAL;  /* Start of whole cue to compress */dcl (comp.end)          array EXTERNAL;  /* End of whole cue */dcl (comp.len)          array EXTERNAL;  /* Length of whole cue (samples) */dcl (comp.here)         array EXTERNAL;  /* Where we are currently reading */dcl (comp.prior)        array EXTERNAL;  /* prior sample # for pixel       */dcl (comp.words)        fixed EXTERNAL;  /* Resulting size in words after compress */dcl (comp.ratio)        fixed EXTERNAL;  /* No. of samples that go into next pixel */dcl (comp.incr)         fixed EXTERNAL;  /* Look at every comp.incr sample to get min/max */dcl (comp.max)          fixed EXTERNAL;  /* Max value seen so far in this block */dcl (comp.min)          fixed EXTERNAL;  /* Min value seen so far in this block */dcl (comp.samples)      fixed EXTERNAL;  /* Samples compressed so far for this block */dcl (comp.track)        fixed EXTERNAL;  /* Which track we're compressing data for */dcl (comp.xmptr)        fixed EXTERNAL;  /* Pointer to next word of external memory */dcl (comp.ptr)          fixed EXTERNAL;  /* Pointer to word in sector               */dcl (comp.scale)        fixed EXTERNAL;  /* for min/max auto scaling                */dcl (dsp.state)         fixed EXTERNAL;  /* State of DSP processing            */dcl (dsp.paused)        fixed EXTERNAL;dcl (dsp.function)      fixed EXTERNAL;  /* DSP function selected             */dcl (dsp.algorithm)     fixed EXTERNAL;  /* which alg selected for DSP funct  */dcl (DSP70.there)       fixed EXTERNAL;  /* true if DSP70 in system (after check) */dcl (dsp.scsi.error)    fixed EXTERNAL;  /* if there is a device error, will contain code */dcl (dsp.time)          fixed EXTERNAL;dcl (dsp.trk.ptr)       fixed EXTERNAL;  /* Pointer into dsp.in/out.tracks     */dcl (dsp.#tracks)       fixed EXTERNAL;  /* Number of tracks being processed   */dcl (dsp.in.trk.bits)   fixed EXTERNAL;  /* Tracks to read cue on              */dcl (dsp.start)         array EXTERNAL;  /* Start of whole cue modify          */dcl (dsp.end)           array EXTERNAL;  /* End of whole cue                   */dcl (dsp.len)           array EXTERNAL;  /* Length of whole cue                */dcl (dsp.boot.len)      fixed EXTERNAL;  /* Length of boot object file         */dcl (dsp.alg.len)       fixed EXTERNAL;  /* Length of algorithm object file    */dcl (dsp.data.len)      fixed EXTERNAL;  /* Length of data table file          */dcl (dsp.data.offset)   fixed EXTERNAL;  /* Sector offset of current data pos  */dcl (dsp.out.trk.bits)  fixed EXTERNAL;  /* Tracks to write output to          */dcl (dsp.out.tracks)    array EXTERNAL;  /* Array of output tracks             */dcl (dsp.out.track)     fixed EXTERNAL;  /* Output track currently doing  (left/mono) */dcl (dsp.out.track.r)   fixed EXTERNAL;  /* Right output track currently doing      */dcl (dsp.out.s)         array EXTERNAL;  /* Start of where to write output     */dcl (dsp.out.e)         array EXTERNAL;  /* End of where to write              */dcl (dsp.in.here)       array EXTERNAL;  /* Current read pointer               */dcl (dsp.out.here)      array EXTERNAL;  /* Current write pointer              */dcl (dsp.percent.done)  fixed EXTERNAL;  /* percent complete of dsp operation  */dcl (tsm.in.done)       fixed EXTERNAL;  /* number of input secs done          */dcl (tsm.out.done)      fixed EXTERNAL;  /* number of output secs done (poly)  */dcl (tsm.ratio)         fixed EXTERNAL;  /* time comp/exp ratio                */dcl (tsm.c.or.e)        fixed EXTERNAL;  /* time comp or exp flag              */dcl (tsm.stereo)        fixed EXTERNAL;  /* flag true if stereo file to proc   */dcl (tsm.pitch)         fixed EXTERNAL;  /* value of Pitch option in samples   */dcl (tsm.max.cut)       fixed EXTERNAL;  /* value of Max.Cut option            */dcl (tsm.just)          fixed EXTERNAL;  /* value of justification option      */dcl (dsp.new.len)       array EXTERNAL;  /* length of DSPed file (ms,ls,wd)    */dcl (dsp.new.end)       array EXTERNAL;  /* ending sector #                    */dcl (dsp.in.wds)        fixed EXTERNAL;  /* extra input words past sector boundary */dcl (dsp.out.wds)       fixed EXTERNAL;  /* extra output words past sector boundary */dcl (dsp.read.event.ptr)     fixed EXTERNAL; /* read ptr for event stack (if no DSP70) */dcl (dsp.write.event.ptr)    fixed EXTERNAL; /* write ptr for event stack (if no DSP70) */dcl (dsp.last.event)         fixed EXTERNAL; /* last DSP70 event we simulated */dcl (dsp.first.write.to.opt) fixed EXTERNAL; /* flag for special first time processing */dcl sys.stereo          fixed EXTERNAL;  /* synchronous stereo flag */dcl syn.scsi.data.xfer  fixed EXTERNAL;  /* IO from the Synclavier SCSI port */dcl src.ratio           array EXTERNAL;  /* ratio to sample rate convert */dcl (Dsp.Next.Track)    fixed EXTERNAL;dcl (Dsp.Edit.Len)      fixed EXTERNAL;dcl Select.DSP70          proc  EXTERNAL;dcl Reset.DSP70           proc  EXTERNAL;dcl DSP.Write             proc (fixed,fixed) EXTERNAL;dcl DSP.Read              proc (fixed)       EXTERNAL;dcl Send.24Bit.Value      proc (fixed,fixed) EXTERNAL;dcl Send.Options.to.DSP70 proc (fixed,fixed) EXTERNAL;dcl Load.Next.Sector      proc (fixed)       EXTERNAL;dcl Load.Next.Words       proc (fixed)       EXTERNAL;dcl Store.DSP.Data        proc (fixed,fixed) EXTERNAL;dcl Move.DSP.Data         proc (fixed)       EXTERNAL;dcl Init.DSP.Function     proc (fixed,fixed) EXTERNAL;dcl do.compress           proc               EXTERNAL;dcl Calc.Percent          proc (array,array) EXTERNAL;dcl Send.Audio.To.DSP70   proc (fixed,fixed,fixed) EXTERNAL;dcl Read.Audio.From.DSP70 proc (fixed,fixed,fixed) EXTERNAL;dcl Do.Dsp                proc               EXTERNAL;library ':LOD:LODLIBS:DSPLIB';