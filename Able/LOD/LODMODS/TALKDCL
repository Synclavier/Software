/* TALKDCL - variables for communications with syncl/lod *//* Syncl/Lod/Scsi Variables */dcl (scsi.in.msg)        fixed EXTERNAL;dcl (scsi.in.buf)        array EXTERNAL; /* need 0-256 (ie 257 words) *//* variables for communicating with main synclavier. */dcl (send.screen.length) fixed EXTERNAL;dcl (send.ddu.info)      fixed EXTERNAL;  /* 1: send disk dump info                  */dcl (send.scroll.info)   fixed EXTERNAL;  /* send current triggered time             */dcl (send.scrub.info)    fixed EXTERNAL;  /* send current scrub position             */dcl (send.dtd.cue )      fixed EXTERNAL;  /* send cue id# and maybe record over      */dcl Synclav.Time.Base.Adjust fixed EXTERNAL; /* sent to adjust synclav time base     */dcl scsi.comm.msb fixed external;dcl scsi.comm.lsb fixed external;dcl scsi.comm.len fixed external;dcl scsi.comm.prt fixed external;dcl scsi.comm.io  fixed external;dcl scsi.active   fixed external;dcl (max.trax.enabled )  fixed EXTERNAL;  /* set true if max tracks enabled */dcl (dtd.cue#  )         fixed EXTERNAL;dcl (Cur.Dtd.Ms)         array EXTERNAL;  /* scroll information for synclavier */dcl (Dtd.Scrub )         array EXTERNAL;  /* current dtd scrub position        */dcl Compute.Bounds     proc(array, array) EXTERNAL;  /* compute bounds for current song */dcl Compute.Start.Time proc(array)        EXTERNAL;dcl command.stack                 array EXTERNAL;dcl Cue.Retake.Start              array EXTERNAL;dcl Cue.Retake.Len                array EXTERNAL;dcl command.in                    fixed EXTERNAL;  /* store pointer     */dcl command.out                   fixed EXTERNAL;  /* read pointer      */dcl (command.#)                   fixed EXTERNAL;  /* nonz: current command  */dcl (command.song)                fixed EXTERNAL;  /* song # there of        */dcl (command.tracks)              fixed EXTERNAL;  /* bits for affected trks */dcl (command.completed)           fixed EXTERNAL;  /* 1: completed           */dcl (abort.command)               fixed EXTERNAL;  /* 1: set by user to abrt */dcl (command.fatal)               fixed EXTERNAL;  /* 1: fatal error hapnd   */dcl (command.aborted)             fixed EXTERNAL;  /* 1: command was abrted  */dcl (command.song.dir.updated)    fixed EXTERNAL;dcl (command.track#)              array EXTERNAL;  /* which track to use     */dcl (errmess)                     fixed EXTERNAL;dcl mark.stars                    proc  EXTERNAL;dcl Clean.Up.Track.Directory      proc (array) EXTERNAL;dcl check.record.protection       proc         EXTERNAL;dcl show.all.track.readys         fixed        EXTERNAL;dcl bounce.mix.rec                array        EXTERNAL;dcl new.dig.xfer.mode             fixed        EXTERNAL;dcl process.synclav.msg           proc         EXTERNAL;dcl process.scsi.msg              proc         EXTERNAL;dcl Synclavier.SCSI.Check         proc         EXTERNAL;library ':LOD:LODLIBS:TALKLIB';