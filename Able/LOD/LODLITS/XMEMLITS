/* :LOD:LODLITS:XMEMLITS - Usage of external memory in LOD operating system *//* 07/25/91 - cj - Added DSP Envelope literals					*//* External memory is used to hold the freq lookup table, the	*//* song and track directories, the main cue directory, as well	*//* as other information											*//* the following are the sector assigments in external			*//* memory														*//* Basic fixed length tables: */dcl ftab.xmsec#      lit '  0';  /* frequency table stored here (4096)  */dcl adir.xmsec#      lit ' 16';  /* adir      table stored here (4096)  *//* Note: must make room for more ADIR sectors to go beyond 16 tracks    *//*       slide every ext memory location down 16 or 48 sectors          */dcl song.xmsec#      lit ' 32';  /* song directory in ext mem           */                                 /* 37 is free                          */dcl venv.xmsec#      lit ' 38';  /* holds vol & env info for voices     */dcl   venv.tdvol     lit '  0';  /*    copy of track directory volume   */dcl   venv.tdpan     lit '  1';  /*    copy of track directory pan      */dcl   venv.tdrvol    lit '  2';  /*    0-4095 (from tdvol/tdpan)-right  */dcl   venv.rvol      lit '  3';  /*    right volume to use              */dcl   venv.tdlvol    lit '  4';  /*    0-4095 (from tdvol/tdpan)-left   */dcl   venv.lvol      lit '  5';  /*    left  volume to use              */dcl   venv.adder     lit '  6';  /*    desired interpolator adder       */dcl   venv.delta     lit '  7';  /*    desired interpolator delta       */dcl   venv.limit     lit '  8';  /*    desired interpolator limit       */dcl   venv.stride    lit '  9';  /*    stride of table                  */dcl temp.xmsec#      lit ' 39';  /* used for dsp optical disk writes    */dcl ddub.xmsec#      lit ' 40';  /* ddu buf                             */dcl tdir.xmsec#      lit ' 41';  /* track dir in ext memory             */dcl atdr.xmsec#      lit ' 42';  /* alt track dir in ext memory         */dcl fine.xmsec#      lit ' 43';  /* look up table for fine frequency    */dcl metr.xmsec#      lit ' 44';  /* look up table for meter bridge      */dcl ccue.xmsec#      lit ' 45';  /* holds current cue in ext memory     */dcl cseg.xmsec#      lit ' 55';  /* real time cue segment linked list   */dcl cseg.xmsiz#      lit '185';  /* size in sectors of cseg area        */dcl tcue.xmsec#      lit '240';  /* trigger cue is stored here          */                                 /* (240 - 249)                         */dcl comp.xmsec#      lit '250';  /* compressed data for wave display    */                                 /* (250 - 253)                         */dcl tvol.xmsec#      lit '254';  /* holds track volume info             */dcl tout.xmsec#      lit '255';  /* holds track routing info            *//* Note: bbuf is used by the Optical to DTD software in cases when      *//* a DSP70 is not present.                                              */dcl bbuf.xmsec#      lit '256';  /* digital bounce temp buffer          */dcl bbuf.len         lit '2048'; /* 8 sectors for copying data          */dcl dsp.xmsec#       lit '264';  /* dsp table area                      */dcl dsp.xmbuf.len    lit '32*256';dcl dsp.env.sec#     lit '298';  /* start of envelope info for DSP      */dcl dsp.env.len      lit '512';  /* word length of buffer               */dcl swap.xmsec#      lit '300';  /* suggested for swap area             */dcl swap.xmlen#      lit '212';  /* length reserved for swap area       */                                 /* length used 02/05/92 = 173 sectors  */								 /* length used 07/18/97 = 163 sectors  *//* The cue data consists of 7 lookup tables     *//* plus the cue list itself.   These lookup     *//* tables are described below                   */dcl max.cue.secs   lit '64';    /* # of sectors in memory for cue      */                                /* pointers (alloc table, time index,  */                                /* etc). must be power of 2 and must   */                                /* must be <= disk.max.cue.secs        */dcl max.#.of.cues  lit '16384'; /* max # of cues we can define         */                                /* limited by both memory size and     */                                /* disk configuration.  must be        */                                /* power of 2 for binary srch          */                                /* Basically max.cue.secs * 256        */dcl allc.sec#        lit  '512';   /* sector start of alloc# indes        */                                   /* 2 words per entry                   */dcl alph.sec#        lit  '640';   /* alph sorted index                   */dcl time.sec#        lit  '704';   /* time sorted index                   */dcl smpt.sec#        lit  '768';   /* smpt sorted index                   */dcl cs.alph.sec#     lit  '832';   /* alph sorted index - current song    */dcl cs.time.sec#     lit  '896';   /* time sorted index - current song    */dcl cs.smpt.sec#     lit  '960';   /* smpt sorted index - current song    */dcl xfer.buf.sec#    lit '1024';   /* 128 sectors for quick xfers         */dcl jaz.dir.sec#	 lit '1152';   /* 9 sectors (9 ports) for jaz dir	  */dcl cue.sec#         lit '1161';   /* start cues here                     */