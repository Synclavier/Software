/* STACKSOU - routines for cue allocate recording,  real time cue stack *//* 07/29/91 - added variables for editview envelope information         */module stackmod;insert ':-xpl:scsilits';insert ':lod:lodlits:globlits'; /* get glob literals                */insert ':lod:lodlits:xmemlits'; /* literals for xmem allocation     */insert ':lod:lodlits:dbuglits'; /* get dbug literals                */insert ':lod:lodlits:cuelits';  /* literals for cue storage         */insert ':lod:lodlits:initlits'; /* literals for init/SCSI           */insert ':lod:lodlits:stacklit'; /* literals for cue stacking        */insert ':lod:lodlits:varlits';  /* msb/lsb literals                 */insert ':lod:lodmods:miscdcl';  /* get misc routines                */insert ':lod:lodmods:dbugdcl';  /* debug routines                   */insert ':lod:lodmods:cuedcl';   /* basic cue routines               */insert ':lod:lodmods:initdcl';  /* scsi variables                   *//* Variables to control editview cue stacking:                      */dcl enabled.for.envelope.info    lit '0';       /* true if SYNCL has enabled to receive envelope info */dcl env.control.bits             fixed public;  /* control bits returned to syncl                     */dcl env.num.of.envs              fixed public;  /* number of envelope descriptors in ext memory       */dcl env.env.len                  fixed public;  /* number of words of env descriptors in ext mem      */insert ':lod:stacka';insert ':lod:stackb';insert ':lod:stackc';end;