/* ARC-LITS  $TITLE  Literals for the Sound File Directory Screen *//* Modified:   05/02/89 - TSS - Merged changes for Optical disk to DTD transfer project   02/22/89 - SGS - moved DialogGrp and assoc objs to GLOBLITS   12/01/88 - cj  - added biN button *//* literals for the two windows which are *//* open on the Archive Screen.            *//* ACTIVEWINDOWID is set to one of these  */dcl OptWindowId lit '0';dcl DirWindowId lit '1';/* literals which are passed to OPEN.ACTION.BUTTONS(WhichMode)   */dcl NullMode      lit '0'; /* nothing to archive yet             */dcl SFMode        lit '1'; /* archive a single file              */dcl CatalogMode   lit '2'; /* copy an entire catalog to optical  */dcl CategoryMode  lit '3'; /* copy an entire category to catalog */dcl LaserEditMode lit '4'; /* modify data stored on Optical disk */dcl CategoryStringLength lit '32'; /* max category string length *//* Object & Group Id Lits and PIDGID Variable Lits *//* Group and Object Base Id's */dcl GRP$Err     lit '(SFD$Id.Base+00)'; /* Group Id for error messages */dcl GRP$Misc    lit '(SFD$Id.Base+01)'; /* Group Id for Misc (mouse hole, etc.) */dcl GRP$Menu    lit '(SFD$Id.Base+02)'; /* Group Id for Main Menu  */dcl GRP$Action  lit '(SFD$Id.Base+03)'; /* Group Id for Command     Buttons */dcl GRP$OptCtrl lit '(SFD$Id.Base+04)'; /* Group Id for Optical   Window Control Objects */dcl GRP$DirCtrl lit '(SFD$Id.Base+05)'; /* Group Id for Directory Window Control Objects */dcl GRP$Temp    lit '(SFD$Id.Base+06)'; /* Group Id for temporary objects *//* NOTE: Group IDs SFD$Id.Base+1000 to SFD$Id.Base+1100 reserved for general SFD group ids (windows, etc.) */dcl OBJ$Err     lit '(SFD$Id.Base+00)'; /* Base Id for dummy error Object */dcl OBJ$Misc    lit '(SFD$Id.Base+01)'; /* Base Id for Misc Objects */dcl OBJ$Menu    lit '(OBJ$Misc+10)';    /* Base Id for Main Menu Objects */dcl OBJ$Action  lit '(OBJ$Menu+50)';    /* Base Id for Command Button Objects */dcl OBJ$OptCtrl lit '(OBJ$Action+100)'; /* Base Id for Optical   Window Control Objects */dcl OBJ$DirCtrl lit '(OBJ$OptCtrl+20)'; /* Base Id for Directory Window Control Objects */dcl OBJ$Temp    lit '(OBJ$DirCtrl+50)'; /* Base Id for temporary objects  *//* NOTE: Object IDs SFD$Id.Base+1000 to SFD$Id.Base+2000 reserved for general SFD object ids (windows, etc.) *//* $SUBTITLE PIDGID Variable Definitions */dcl ErrGrp     lit '00'; /* Error         Group */dcl MiscGrp    lit '01'; /* Misc          Group */dcl MenuGrp    lit '02'; /* Main Dialog   Group */dcl ActionGrp  lit '03'; /* Action Button Group */dcl OptCtrlGrp lit '04'; /* Optical   Window Control Group */dcl DirCtrlGrp lit '05'; /* Directory Window Control Group */dcl TempGrp    lit '06'; /* used for temporarily defined objects *//* Free: 7 - 9 */dcl MouseHole         lit '10'; /* mouse hole (for exiting) *//* Free: 11 - 18 */dcl MenuModified      lit '19'; /* true if menu modified by user */dcl SFName            lit '20';dcl SFNameLabel       lit '21';dcl SaveName          lit '22'; /* might be deleted eventually */dcl Caption           lit '23';dcl CatTable.Type.Obj lit '24';dcl CatTable          lit '25';dcl FreeMem           lit '26';/* duplicate objects for menu items in case of invalid inputs *//* allows program to restore previous values */dcl SavedSFName            lit '27';dcl SavedSaveName          lit '28'; /* might be deleted eventually */dcl SavedCaption           lit '29';dcl SavedCatTable.Type.Obj lit '30';dcl SavedCatTable          lit '31';/* Free: 32 - 39 *//* NOTE: Order of these variables is VERY important. Don't Mess Up! */dcl ActionButtonBits  lit '40'; /* bits which tell if corresponding button is on */  dcl Bit#Clear       lit '001'; /* hold IDs of action buttons */  dcl Bit#Store       lit '002';  dcl Bit#Rep         lit '004';  dcl Bit#StoreCatlg  lit '008';  dcl Bit#UpdLabel    lit '016';  dcl Bit#UpdOptical  lit '032';  dcl Bit#UpdSource   lit '064';  dcl Bit#Delete      lit '128';  dcl Bit#Copy        lit '256';  dcl Bit#CopyCtgry   lit '512';  dcl Bit#CatInfo     lit '1024';dcl ClearButton       lit '41'; /* hold IDs of action buttons */dcl StoreButton       lit '42';dcl RepButton         lit '43';dcl StoreCatlgButton  lit '44';dcl UpdLabel          lit '45';dcl UpdOpticalButton  lit '46';dcl UpdSourceButton   lit '47';dcl DeleteButton      lit '48';dcl CopyButton        lit '49';dcl CopyCtgryButton   lit '50';dcl CatInfoButton     lit '51';dcl FirstActionButton lit 'ClearButton'; /* useful literals */dcl NumActionButtons  lit '(CatInfoButton-FirstActionButton+1)';/* Free: 52 - 59 */dcl FileOnOptical     lit '60'; /* for SOUND FILE: true if current file exists on LaserDisk */                                /* for SUBCAT: number of files which are already saved on Optical disk */dcl FileOnSource      lit '61'; /* for SOUND FILE: true if current file exists on source device */                                /* for SUBCAT: number of files which don't yet exist on Optical disk */dcl FileDevice        lit '62'; /* device on which file(s) to archive sit(s) */dcl FileType          lit '63'; /* type of file (catalog (large or small) or sound file) */dcl FileAddress       lit '64'; /* 2 words - abs addr of file/catalog on source device *//*  FileAddress(1)    lit '65';            */dcl FileLength        lit '66'; /* 2 words - sector length of file/catalog on source device *//*  FileLength(1)     lit '67';            *//* $SUBTITLE *//* Free: 68 - 69 *//* Directory Window Miscellaneous Control Objects */dcl DeviceGrabIcon       lit '70'; /* id of take button for device switch */dcl DeviceSwitchId       lit '71'; /* id of displayed device switch for directory window */dcl DeviceSwitchTable    lit '72'; /* holds mapping of switch positions to device #s */  /* reserve room here for 10 items */dcl DirFormatSwitchId    lit '82'; /* display format switch    */dcl DirFunctionSwitchId  lit '83'; /* special functions switch */dcl DeviceSwitchTableLen lit '84'; /* allows up to 10 devices  *//* Free: 85 - 89 *//* Optical Disk Window Miscellaneous Control Objects */dcl MountButton       lit '90'; /* mount volume button id   */dcl OptFormatSwitchId lit '91'; /* display format switch id */dcl StatsLabel        lit '92'; /* statistics label id      *//* Free: 93 - 129 */  /* (used to have the dialog objects defined here) *//* Additional space for CATEGORY/CATALOG INFORMATION Panel *//* This space is used to store any information from the above   panels.  It is read and written to immediately before and   after a call to Get.Cat.Info.Event to restore switch settings,   user-typed fields, etc.  */dcl CatInfoScratch   lit '130'; /* 19 words long *//* 150 - 155:  Name of new subcatalog to be created. Used during COPY CATEGORY */dcl CatalogString    lit '150'; /* -xpl string */dcl CatalogStringLen lit '  8';dcl SavedCatSector   lit '156'; /* index address of category currently */dcl SavedCatWord     lit '157'; /* stuffed in SFName field             *//* Free: 158 - 174 *//* NOTE:  Words 175-255 reserved for Window Management code */