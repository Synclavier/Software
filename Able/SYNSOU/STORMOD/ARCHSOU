/* ARCHSOU  $TITLE  Laser Disk Archiving Screen Definition *//*  8/15/88 - LSS - check if opt disk configured before drawing screen*/module ARCHMOD;insert ':-xpl:asciilit';insert ':synlits:comlits';    /* get configuration and pdl size */insert ':synlits:globlits';insert ':synmods:globdcl';         insert ':synmods:errdcl';insert ':synmods:tprimdcl';insert ':synmods:arch1dcl'; /* this is where the real code is */LaserDisk.Archive.Screen: proc (arg) public swapable;   dcl arg fixed;   if find_device(10) = null then do; /* optical disk is not configured */      call pbyte (token, 0, A.O); /* stuff token with "O0" for error message */      call pbyte (token, 1, A.0);      token(0) = 2;               /* set length to 2 characters */      call device.error; /* print "device not configured" to terminal */      token(0) = 0;      return (-1);   end;   else do; /* optical disk is configured, put up the screen */      call LaserDisk.Archive.Screen.Driver(arg);   end;   return Goto.This.Screen;   /* return state info */end LaserDisk.Archive.Screen;end ARCHMOD;