/* ICONS -  $TITLE  Routines to Build Various Icon Objects *//* MODIFIED:   05/02/89 - TSS - Merged changes for Optical disk to DTD transfer project*/Define.Device.Icon: proc (ID#,Row,Col,Device,LabelChar) returns (fixed) public swapable;   dcl ID#       fixed;   dcl (Row,Col) fixed; /* transparent mode coords */   dcl Device    fixed; /* which physical device icon statnds for */   dcl LabelChar fixed;   dcl Icon (32) fixed;   dcl mr13i     lit 'write("373")';   write("313")=addr(icon(0));  /* set up ptr for loading of icon */   mr13i=O#ICON.MoveTo;      mr13i=  0; mr13i=10;   mr13i=O#ICON.Plot;        mr13i=  0; mr13i=95;   mr13i=O#ICON.Plot;        mr13i=190; mr13i=95;   mr13i=O#ICON.Plot;        mr13i=190; mr13i=10;   mr13i=O#ICON.Plot;        mr13i=  0; mr13i=10;   mr13i=O#ICON.MoveTo;      mr13i= 50; mr13i=30;   mr13i=O#ICON.CharSize;    mr13i=  8;   mr13i=O#ICON.AlphaString; mr13i=  1; mr13i=LabelChar;   mr13i=O#ICON.End; /* terminate icon definition */   ID#=Define.Graphics.Icon(ID#,Col*100,Row*100,1,Icon);   call Deposit.Object.Info(ID#,O#UserData,Device); /* store device number in object */   return id#;end Define.Device.Icon;