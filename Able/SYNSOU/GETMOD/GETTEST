/* TEST PROGRAM FOR GET NEXT EVENT */INSERT ':SYNLITS:COMLITS';INSERT ':SYNMODS:GETDCL';INSERT ':SYNMODS:MOUSEDCL';INSERT ':SYNMODS:TTYDCL';INSERT ':SYNLITS:ASCIILIT';INSERT ':SYNMODS:SYNDUMMY';insert ':synmods:globdcl';dcl code fixed;CALL PSR('Get Next Event test.');call pcr;call mouse.init;DO WHILE 1;   CALL ENABLE_ALL_GETS;   CODE = GET.NEXT.EVENT;   CALL DISABLE_ALL_GETS;   CALL PNUM(CODE,0);   CALL PS('  ');   CALL PNUM(NEXT.EVENT.INFO,0);   CALL PS('  ');   CALL PNUM(NUM.OF.D50.IN.CHARS,0);   CALL PS('  ');   CALL PNUM(NEXT.D50.IN.CHAR,0);   CALL PCR;      IF (CODE=GET.IN.CHAR)&(NEXT.EVENT.INFO=ASC.CALL.TERMINATE)   THEN DO;      CALL TTY_WAIT;      CALL EXIT(0);   END;END;