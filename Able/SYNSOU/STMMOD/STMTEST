/* STMTEST - $Title Test Program for Sample-To-Memory */insert ':synlits:comlits';          /* pdl size, configuration       */insert ':synmods:syncldcl';         /* bind in real time code        */insert ':synmods:ttydcl';           /* for ps                        */insert ':synmods:scrndcl';          /* for erase.rest.of.line        */insert ':synmods:moussdcl';         /* for mouse cursor playback     */library ':synlibs:mousslib';insert ':synmods:stmdcl';           /* get STM        */call ps ('Sample-to-Memory Screen Test ');call pcr;call tty_wait;dcl i fixed;call initialization;                /* real time initialization      *//* $$$ */ call ps('completed intitialization'); call pcr;call tty_wait;call mouse.init;                    /* mouse     initialization      */call tty_wait;/* $$$ */ call ps('completed mouse intitialization'); call pcr;call erase.rest.of.line(23,0);call cpos(23,0);call tty_wait;i=0;do while 1;   call STM.SCREEN(i);  /* call to activate stm screen */end;