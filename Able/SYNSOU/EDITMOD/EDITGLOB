/*	:SYNSOU:EDITMOD:EDITGLOB - $title - variables used throughout the sequence editor code	*//***** globals *****/dcl err.time					fixed public;		/*	time of error message display		*/dcl undo.enabled				boolean public;	/*	if true, sequence will be saved before each major operation	*///	dcl debug.grp					fixed public;dcl main.menu.grp				fixed public;dcl button.grp					fixed public;dcl times.grp					fixed public;dcl current.sub.menu			fixed public;		/*	holds a literal which indicates current submenu choice	*/dcl current.display			fixed public;		/*	holds a literal which indicates current display choice	*/dcl current.dialog			fixed public;		/*	holds a literal which represents current dialog box		*/dcl current.sub.menu.grp	fixed public;		/*	group id# for current submenu		*/dcl current.display.grp		fixed public;		/*	group id# for current display		*/dcl current.dialog.grp		fixed public;		/*	group id# for current dialog box	*/dcl time.map		data public (0, 5, 1, 2, 3, 4);	/*	used to map time mode switch positions to smgr O#MSEC time modes	*/dcl map.aee.time	data public (0, 2, 3, 4, 5, 1);dcl start	(1)				fixed public;		/*	holds edit region start time	*/dcl finish	(1)				fixed public;		/*	holds edit region end time		*/dcl mem.ms	(7)				fixed public;		/*	holds times for m1-m8			*/dcl mem.ls	(7)				fixed public;dcl (sav.ms, sav.ls)			fixed public;		/*	temporarily holds a time		*/dcl first.time.bits			fixed public;		/*	used to determine if a dialog box has been displayed yet			*/dcl info.on						boolean public;	/*	true if info button has been hit											*//***** internal memory object id#'s *****///	dcl debug.switch				fixed;//	dcl debug1.switch				fixed;dcl set.enables				fixed public;