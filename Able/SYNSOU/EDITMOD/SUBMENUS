/* SUBMENUS - $title - Routines to close sub-menus and handle sub-menu events */CLOSE.SUB.MENU: proc public swapable;   if (current.sub.menu.grp == -1)   or (current.sub.menu == -1)   then return;	Erase.Group.Objects(current.sub.menu.grp);	Undefine.Group.Objects(current.sub.menu.grp);	Ungroup.Objects(current.sub.menu.grp);	current.sub.menu.grp	= -1;	current.sub.menu		= -1;end CLOSE.SUB.MENU;GET.SUB.MENU.EVENT: proc(event) returns (fixed) public swapable;   dcl event fixed;   while (true)	{      if (Screen.Event.Group <> current.sub.menu.grp) then return event;      if (event <> Get.Null.Event)		{         if (Screen.Event.Code == get.screen.event)			{            if (current.sub.menu == M#Region)	event	= Get.Region.Sub.Menu.Event(event);            else											event	= Get.Null.Event;         }      }      else													event	= Get.Next.Edit.Screen.Event;   }end GET.SUB.MENU.EVENT;