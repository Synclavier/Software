/* $title - EDITSCRN - contains main definition procedures for sequence editing screen *//*   04/04/87 - eeg - changed over to dynamic defining of objects    02/04/87 - eeg - created this file*/DEFINE.SCREEN.FRAME: PROC SWAPABLE;   dcl tmp    fixed;   dcl str(8) fixed;   dcl size   fixed;   call Set.Auto.Allocation.Id(screen.frame.base);  /* reset where auto-allocation begins */   if mg600 then size=3; else size=1;   tmp = define.graphics.string(S#AA,gpos.x(6400),gpos.y(0)+10,30,size,0,O#GSTR.General);   call Copy.String('SEQUENCE EDITOR',str);   call deposit.graphics.string(tmp,str);   tmp = define.frame.icon(S#AA,0,0);   call display.and.undefine.obj(tmp);END DEFINE.SCREEN.FRAME;/* $subtitle - main screen definition procedure */DEFINE.EDIT.SCREEN: PROC PUBLIC SWAPABLE;   dcl tmp fixed;   call clear.term;   call initialize.screen.manager(trd.len-2);   /* basic screen items */   call define.screen.frame;   call define.main.menu;        /* main menu, cut paste icon, setup icon */   call define.times.group;      /* edit times, current play time    */   /* call define.debug; DEBUG SWITCHES */   call define.button.group;     /* recorder controls, memories */   tmp = Define.Label(S#AA,dialog.bot,45,0,'Working...');   /* used in various dialog boxes */   if (mg600)   then call Set.Object.Attr(tmp,0,ATTR#Blink);   call pid(working.msg,tmp);   call define.trk.mgr.disp;       /* this is done here so display comes up quickly when chosen */   call set.screen.animate(true);    call activate.screen(gid(cur.play.time));   call Disable.Object(gid(working.msg));    /* don't want to see working... message */   call update.screen;   call open.region.sub.menu;     /* DEBUG: FOR INITIAL RELEASE  ONLY */   call open.trk.mgr.disp;       /* DEBUG: FOR INITIAL RELEASE ONLY, OPEN IT HERE */end DEFINE.EDIT.SCREEN;