/* DISPLAYS - $title - Routines to open displays and route their input *//* closes current display, cleans up */CLOSE.DISPLAY: proc swapable;   if (current.display.grp == -1)   or (current.display == -1)   then return;   if (current.display == #TrkMgr)					//	trk mgr needs some extra clean-up   {		dcl id_obj	fixed;		id_obj	= gid(trk.grid);		Erase.Object(id_obj);	Disable.Object(id_obj);      id_obj	= gid(trk.buttons);	Erase.Object(id_obj);	Disable.Object(id_obj);		//	don't want to undefine trk mgr, takes too long to re-define   }   else	{		Erase.Group.Objects(current.display.grp);		Undefine.Group.Objects(current.display.grp);	}	Ungroup.Objects(current.display.grp);	current.display.grp = -1;	current.display     = -1;end CLOSE.DISPLAY;/* routes event to appropriate display handler */GET.DISPLAY.EVENT: proc(event) returns (fixed) public swapable;   dcl event fixed;	while true	{      if (Screen.Event.Group <> current.display.grp) then return event;      if (event <> Get.Null.Event)		{         if (current.display == #TrkMgr)	event	= Get.Trk.Mgr.Event(event);         else										event	= Get.Null.Event;      }      else											event	= Get.Next.Edit.Screen.Event;  /* default event */   }end GET.DISPLAY.EVENT;