/* ASYNCSOU - Audio Event Editor SYNCHRONIZATION AND TIME MODULE source *//* Modified:   05/02/89 - TSS - Merged changes for Optical disk to DTD transfer project   08/08/88 - cj  - added thd lits   06/15/88 - CJ  - added GENERATE button to activate smpte generator*/MODULE ASYNCSOU;insert ':-xpl:intrprtr';insert ':synlits:comlits';  /* Compilation literals */insert ':synlits:globlits';insert ':synlits:asciilit';insert ':synlits:lpnlits';insert ':synlits:thdlits';insert ':synlits:synclits';insert ':synmods:globdcl';  insert ':synmods:giddcl';insert ':synmods:getdcl';insert ':synmods:getvdcl';insert ':synmods:errdcl';insert ':synmods:tprimdcl';insert ':synmods:loddcl';insert ':synmods:mathdcl';insert ':synmods:tformdcl';insert ':synmods:xmemdcl';insert ':synmods:ttydcl';insert ':synmods:plotdcl';insert ':synmods:smgrdcl';insert ':synmods:mousedcl';begin;insert ':synmods:audmods:aglobdcl';insert ':synmods:audmods:anotedcl';insert ':synmods:audmods:apmendcl';insert ':synmods:audmods:aicondcl';insert ':synmods:audmods:acuedcl';insert ':synmods:audmods:acuemdcl';insert ':synmods:audmods:arecdcl';insert ':synmods:audmods:aseqdcl';insert ':synmods:audmods:amotdcl';insert ':synmods:audmods:aoptdcl';insert ':synrdcls:03-pdcls';DCL SMPTE.GENERATOR      PROC(FIXED) EXTERNAL;   /* SMPTE GENERATOR VIA SOFTWARE */DCL TIME.BASE.MODE       FIXED       EXTERNAL;   /* INDICATES TIME BASE MODE (INTERNAL, EXTERNAL SYNC, ETC) */DCL STORE.SYNCL.PARAM PROC (FIXED,FIXED,FIXED,FIXED) EXTERNAL; /* PASS PARTIAL # (0,1,2,3),  FRAME # (0-X), LPN# (!!), VALUE */DCL MIDI.SYNC.OUT     	 FIXED external; 		 /* MODE OF OPERATION FOR MIDI SYNC OUTPUT (0->DON'T SEND BYTES, 1-32 SEND TO OUTPUT #1-32) */DCL MIDI.SYNC.IS.TC   	 FIXED external; 		 /* TRUE IF MIDI SYNC OUTPUT FORMAT IS MIDI TC */DCL DISPLAY.MTC		  	 FIXED external; 		 /* SET WHEN SHOULD SHOW MTC IN LOWER WINDOW WHILST PLAYING */DCL STOP.RECD.MOVE.PLAY  PROC        EXTERNAL; 	 /* PROCEDURE TO STOP SEQUENCER */DCL DISPLAY.SEQUENCER.STATUS         PROC EXTERNAL;     /* SETS UP CORRECT SEQUENCER DISPLAY LIGHTS */DCL MIDI.FULL.FRAME		 PROC(FIXED, FIXED) EXTERNAL;	/* creates midi full frame message		*/DCL NEW.MTC.VAL       	 FIXED external; 		 /* SET WHEN NEW MTC VALUE AVAILABLE FOR DISPLAY */DCL MIDI.PARAM.ID		 FIXED EXTERNAL;DCL CLEAR.PARAMETERS     PROC EXTERNAL;          /* PROCEDURE TO ERASE PARAMETERS - DO NOT SWAP SO TRACK BUTTONS ARE FAST */DCL DISPLAY.PARAMETER.BUTTONS        PROC EXTERNAL;      /* SET PARAMETER BUTTONS */DCL (ACTIVE.PARMS)       ARRAY EXTERNAL;         /* ALLOW 20 ACTIVE PARAMETERS */DCL DISPLAY.PAR          PROC  EXTERNAL;   		 /* PROCEDURE TO DISPLAY TIMBRE INFO */DCL DISPLAY.SMODE        PROC(FIXED) EXTERNAL;   /* DISPLAY SMPTE MODE IN LOWER */DCL CLEAR.LOWER          PROC EXTERNAL;    		 /* CLEAR THE LOWER LINE OF DISPLAY */DCL EMIT.STRING              	PROC(FIXED, FIXED ARRAY) EXTERNAL;   /* NON-SWAP!! */ /* WRITE STRING TO ALPHA, STARTING AT POS - NOTE - DOES NOT CLEAR DECIMAL POINT */DCL (NEW.BEAT.NUMBER)        	FIXED EXTERNAL; /* SET TRUE WHEN CHANGED */DCL (SUPRESS.BEAT.DISPLAY)   	FIXED EXTERNAL; /* SET TO TRUE IF SHOULD SUSPEND BEAT DISPLAY */DCL (BEAT.DISPLAY.TIME)      	FIXED EXTERNAL; /* TIME TO RESUME */DCL (OMS.MIDI.ENABLED)		 	FIXED EXTERNAL;DCL (POLY.TIMBRE.MIDI.CONTROL)  FIXED EXTERNAL;DCL (MIDI.INPUT.ENABLED)	 	FIXED EXTERNAL;DCL (ANY.OMS.MIDI.BULK.BYTES)	FIXED EXTERNAL;DCL (OMSMIDI.PTR)			 	FIXED EXTERNAL;insert ':synmods:linkdcl';insert ':synsou:audmod:aud-sync';insert ':synsou:audmod:aud-syn1';end;end ASYNCSOU;