/* 10-INTDC   $TITLE  External declarations for the interrupt routines   Modified:   01/25/90 - MWH - Fix "300 msec delay starting cues" bug (from EditView)   07/22/88 - MWH - Add SMPTE check and coast time   12-30-86 - CHANGED WITHIN.SCAN TO GLOBAL   6-15-86 - CJ  - D16 VARIABLE NAME CHANGES   5-16-86 - MPB - Mouse.Scan.And.Poll declaration   5/15/86 - "official" creation of release-M modules*//* FROM 144-TIM1 */DCL (ELPQF,ELPQB)       FIXED EXTERNAL; /* QUE FOR ENV ATTACK AFTER LOOP  */DCL (FLPQF,FLPQB)       FIXED EXTERNAL; /* QUE FOR FINAL DELAY AFTER LOOP */DCL (EDLQF,EDLQB)       FIXED EXTERNAL; /* QUE FOR ENV DELAY              */DCL (FDLQF,FDLQB)       FIXED EXTERNAL; /* QUE FOR FINAL DELAY            */DCL (EKBQF,EKBQB)       FIXED EXTERNAL; /* QUE FOR KBD NOTES WITH DELAYS  */DCL (IKBQF,IKBQB)       FIXED EXTERNAL; /* QUE FOR KBD NOTES/INX DELAYS   */DCL (EATQF,EATQB)       FIXED EXTERNAL; /* QUE FOR ENV ATTACK             */DCL (IATQF,IATQB)       FIXED EXTERNAL; /* QUE FOR INX ATTACK             */DCL (FINQF,FINQB)       FIXED EXTERNAL; /* QUE FOR FINAL DECAY            */DCL EPQBUF   ARRAY EXTERNAL;              /* 5 PHASES                    */DCL IPQBUF   ARRAY EXTERNAL;              /* (TWO WORDS PER PHASE)       */DCL (PTRS.LOOPED )   FIXED EXTERNAL;      /* SET WHEN PLAY PTRS ARE RESET AT OVERALL LOOP */DCL (LOOP.RESTART)   FIXED EXTERNAL;      /* SET WHEN TIME BASE INFO LOOPED */DCL (LAST.CLICK  )   FIXED EXTERNAL;      /* TIME OF LAST CLICK (APPROX)    */DCL (DELAY.NOTE.AND.CUE.STARTS)   FIXED EXTERNAL;DCL (DELAY.NOTE.AND.CUE.TIME)     ARRAY EXTERNAL;DCL (DO.SMPTE.CHECK)   FIXED EXTERNAL;    /* CHECK SYNC AFTER SMPTE DROP OUT */DCL (SMPTE.COAST.MSEC) FIXED EXTERNAL;    /* COAST SMPTE FOR HOW LONG ON READ ERRORS */DCL MOVE.LOOP.QUES PROC EXTERNAL;DCL LOOP.TIME.BASE PROC EXTERNAL;  /* RESETS TIME BASE VARS AT OVERALL LOOP JUMP BACK *//* FROM 144-TIM2 */DCL INITIALIZE.COMPLETED           FIXED EXTERNAL;   /* SET TRUE WHEN QUE INITIALIZE COMPLETED */DCL (D16THERE)                     FIXED EXTERNAL;   /* WRITTEN TO D16 TO MAKE 1 MSEC INTERRUPTS */DCL (D16TIM)                       FIXED EXTERNAL;   /* D16 INCREMENT - D16 TICKS IN 1 MSEC */DCL (TIME.BASE.MODE)               FIXED EXTERNAL;   /* INDICATES TIME BASE MODE (INTERNAL, EXTERNAL SYNC, ETC) */DCL (NEW.SEQUENCER.FORWARD.MOTION) FIXED EXTERNAL;   /* NEW FORWARD MOTION NOW */DCL (ANY.INDEX.QUES)               FIXED EXTERNAL;   /* TRUE TO SCAN INDEX QUES       */DCL (MIDI.CLOCK.RATE)              FIXED EXTERNAL;   /* EST.RATE OR SAMPLED.CLICK     */DCL (MISSED.BEAT.CLOCKS)           FIXED EXTERNAL;   /* IN CLOCKS TO PROCESS ONCE EST.RATE IS KNOWN FOR SURE */DCL (ANY.OMS.MIDI.SYNC.BYTES)  	   FIXED EXTERNAL;	 // Nonzero if any OMS MIDI Sync bytes are availableDCL (ANY.OMS.MIDI.BULK.BYTES)  	   FIXED EXTERNAL;	 // Nonzero if any OMS MIDI Bulk bytes are available