 LAST TIME CORRESPONDING TO PTR */    (#WRD,#SEC)       FIXED EXTERNAL, /* RELATIVE PTR INTO NAH AREA AT WHICH ACTION OCCURS */    (#ANYF,#ANYR)     FIXED EXTERNAL, /* ANY REV & FOR FOR THIS POINT   */    (#W1,#W2,#W3,#W4) FIXED EXTERNAL, /* 4 WORDS TO HOLD A NOTE RECORD */    (#MSB,#LSB)       FIXED EXTERNAL, /* GENERAL 32-BIT VALUE TO PASS OR RETURN */     #STATUS          fixed external; /* Status of track (UNINIT#,ACTIVE#,OUT#) *//* Overall preset information */dcl START_MEAS           fixed external, /* Jump to measure */    INIT_MEAS            fixed external, /* Initial measure number*/    LAST_MEAS            fixed external, /* Last measure */    INIT_PAGE            fixed external, /* Starting page number*/    PRINTER_TYPE         fixed external,    PRINTER_WIDTH        fixed external,    PIXEL_WIDTH          fixed external,    PIXEL_LENGTH         fixed external,    LEFT_MARGIN          fixed external,    PAGE_WIDTH           fixed external,    BOT_MARGIN           fixed external,    PAGE_LENGTH          fixed external,    SCALE_FACTOR         fixed external,    OVERLAP              fixed external,    FIRST_INDENT         fixed external,    SPACING_PERCENT      fixed external,    MEAS_FREQ            fixed external,    MEAS_SYNC            fixed external,    MEAS_LINE            fixed external,    START_CLICK          fixed external, /* Starting click */    CLICK_NOTE           fixed external, /* Rhythmic value of the click */    CLICK_TRACK          fixed external, /* Track containing rhythmic base of the transcription */    EDIT_RESOLUTION      fixed external, /* Edit point/ whole note */    FORMAT               fixed external, /* Overall miscellaneous format */    NOTE_SPACE           fixed external, /* Minimum amount of space between notes */    BAR_SPACE            fixed external, /* Minimum space around bar lines */    STVS_PP              fixed external, /* Staves per page*/    SIDES                fixed extern