SETUP_FONTS:procedure (FONT,EXTENDED,LIBRARY) public;  dcl FONT     fixed,      EXTENDED boolean,      LIBRARY  boolean;  if FONT = F_ALPHA# then do; /* TYPEWRITER */    if EXTENDED then do;      if LIBRARY then do;        UPPER_FONT = FONT;        LOWER_FONT = F_EXTENDED#;      end;      else do;        UPPER_FONT = F_MUSIC#;        LOWER_FONT = FONT;      end;    end;    else do;      UPPER_FONT = F_MUSIC# + LIBRARY;      LOWER_FONT = FONT;    end;  end;  else do; /* STANDRD - BOLD_ITALIC */    if EXTENDED then do;      UPPER_FONT = FONT;      LOWER_FONT = FONT;    end;    else do;      UPPER_FONT = F_MUSIC# + LIBRARY;      LOWER_FONT = FONT;    end;  end;end SETUP_FONTS;