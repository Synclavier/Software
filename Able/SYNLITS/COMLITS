/* comlits - insert file for pdl size, configuration, compilation flags */dcl pdl.size  lit '1500';    					/* size is here                      		*/pdl pdl.size;         		 					/* so everyone knows about it        		*/dcl inc.voice.output 			lit '0';		/* include S. Wonder voice output...		*/dcl delete.on.next.full.build 	lit '1';		/*  mark publics to delete on next build	*/insert ':synlits:somelits';  					/* get literals for this compilation 		*/