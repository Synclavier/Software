dcl buf  (1023) fixed;dcl buf2 (1023) fixed;dcl (i, j)      fixed;call readdata (0, 0, buf, 1024);i = 0;do while (i < 1024);   do j = 0 to 7;      print octal(buf (i + j)), ' ',;   end;   print ' ',;   do j = 0 to 7;      if buf (i + j/2) <> 0      then print character(byte(location(addr(buf (i - 1))), j)),;   end;   print;   i = i + 8;end;call diskread (0, buf2, 1024);do i = 0 to 1023;   if buf (i) <> buf2 (i) then do;      print 'DISKREAD doesn''t match READDATA.';      call exit(-1);   end;end;call readdata (0, 10000, buf, 1024);call diskread (10000, buf2, 1024);do i = 0 to 1023;   if buf (i) <> buf2 (i) then do;      print 'DISKREAD doesn''t match READDATA (ignore this on floppy systems).';      call exit(-1);   end;end;