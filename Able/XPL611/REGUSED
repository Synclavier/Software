regused: proc(dest) fixed; /* determine register used in DEST */   dcl dest fixed; /* destination to check */   if (dest and b.rd) = b.rd then do; /* register destination? */      if (((dest and b.ibt) <> 0) and ((dest and (b.md xor b.rd)) = 0)) /* if increment bit set, but not memory, it's a transfer */      then return (0); /* no register specified */      else return (regbit (dest and b.rmsk)); /* any register */   end;   else if (dest and b.ad) <> 0 /* if arithmetic destination */   then return (regbit (dest and b.amsk)); /* accumulator only */   else return (0); /* device destination - no register */end regused;