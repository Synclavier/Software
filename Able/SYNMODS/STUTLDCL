/* STUTLDCL - $TITLE Sample-to-Memory Utility External Definitions and Library   Modified:   08/11/87 - MWH - Update all to support max 4 poly bins, 512mb/bin   */   dcl stm.graphx            fixed external;     /* sound editor graphics cursor x location */   dcl stm.select.mode       fixed external;     /* selection mode where 0=display, 1=modify, 2=store */   dcl stm.last.select.mode  fixed external;     /* last selected mode */   dcl stm.choice            fixed external;     /* sound editor command menu choice */   dcl stm.cmd.line          fixed external;     /* indicates if we are on (1) the command line or off (0) */   dcl sf.type               fixed external;     /* 1 -> if a sound file; 0 -> if not a sound file; -1 -> if name not available*/   dcl stm.hor.factor        fixed external;     /* current number of samples per pixel - a power of 2 */   dcl stm.vert.factor       fixed external;     /* current vertical scaling factor - a power of 2 */   dcl stm.hor.scale         fixed external;     /* horizontal scale of sound display */   dcl stm.vert.scale        fixed external;     /* vertical scale of sound display */   dcl stereo                fixed external;     /* indicates if current sound file stereo or mono*/   dcl start.time            array external;     /* starting time of display */   dcl end.time              array external;     /* ending time of display */   dcl cursor.time           array external;     /* cursor time at cursor location (seconds,milliseconds,microseconds) */   dcl prev.cursor.time      array external;     /* previous cursor time seconds, milliseconds, microseconds */   dcl tot.time              array external;     /* total time of valid data */   dcl prev.tot.time         array external;     /* previous time of valid data */   dcl some.time             array external;     /* temp     */   dcl some.other.time       array external;     /* temp     */   dcl previous.char.time    fixed external;     /* last time character was processed */   dcl stm.begin.time        array external;     /* beginning sample time of edit location*/   dcl stm.end.time          array external;     /* sample time of ending edit location */   dcl number_of_symbols     fixed external;     /* number of symbols in the sound file symbol table */   dcl stm.sample.rate       fixed external;     /* current sound file sample rate*/   dcl stm.left.voltage      fixed external;     /* current left sample signal level */   dcl stm.right.voltage     fixed external;     /* current right sample signal level */   dcl stm.record.device     fixed external; 	/* d66, stm, digital stm */   dcl stm.record.stereo	 fixed external; 	/* true if stereo desired */   dcl stm.record.rate       fixed external; /* sound file recording sample rate*/   dcl stm.record.notrigger  fixed external; /* threshold               */   dcl stm.record.scale      fixed external; /* recording volume        */   dcl stm.record.threshold  fixed external; /* user specifed recording threshold in volts    */   dcl STM.THRESHOLD         fixed external; /* value for silence */   dcl stm.file.name         array external; /* current sound file name */   dcl stm.caption           array external; /* current sound file caption */   dcl caption               array external; /* previous sound file caption */   dcl prev.hor.time         array external;   dcl locked           fixed external;       /* if a sound file is locked */   dcl lock.stereo      fixed external;       /* if the locked sound file is mono or stereo */   dcl lock.name        fixed array external; /* name of sound file that is locked in right channel display */   dcl lock.sample.rate fixed external;       /* locked sound file sample rate  */   dcl lock.tot.time    fixed array external; /* length of locked sound file */   dcl hor.zoom.table  data external;   dcl vert.zoom.table data external;   dcl COMPUTE_PIXEL_NUMBER             proc (fixed array) returns (fixed) external;  /* returns a pixel number given a time */   dcl COMPUTE_PIXEL_TIME               proc (fixed,fixed array) external; /* pass pixel # (in display area), and a time array */   dcl STM.EDIT.MODE                    proc returns (fixed) external;  /* determines if editing a sound file */   dcl LOOK.UP.SF.INFO                  proc external; /* Look up sound file information in the file header and set up global information*/   dcl FIND_NAME                        proc (fixed array,fixed array) returns (fixed) external; /* determines if symbol exists and returns symbol index if found */   dcl COPY_OUT_STRING                  proc (array) external;   dcl FIND_TIME                        proc (fixed array,fixed array) returns (fixed) external; /* returns index to one beyond where symbol belongs in symbol table */   dcl STM.EXIT.CHECK                   proc external;   dcl CONVERT.SECS.TO.STRING           proc (fixed,fixed array,fixed) returns (fixed) external;   dcl CONVERT.SAMPLE.TIME.TO.STRING    proc (fixed array) external;  /* converts a sample time to a string and puts it in token array */   dcl CONVERT.HOR.TIME.TO.STRING       proc (fixed array) returns (fixed) external;   dcl FIND_LABEL                       proc(fixed array,array) external;  /* determines if symbol exists and returns symbol index if found */   dcl SET.SYMBOL.TIME                  proc(fixed array,fixed array,fixed,fixed,fixed) external;  /* set symbol time in symbol table */   dcl COMPUTE.SAMPLE.VOLTAGE           proc(fixed) returns (fixed) external;  /* computes and returns voltage of given sample value */   dcl COMPUTE_SIGNAL_LEVEL             proc(fixed array) external; /* computes the signal level (STM.VOLTAGE) of the current sample */   dcl FIND.RECORDING.BASE              proc(fixed array) external;   dcl COMPUTE.RECORDING.TIME.AVAILABLE proc external; /* find available recording time */   dcl DISPLAY.RECORDING.TIME           proc external;   /* displays recording time available */   library ':syntlibs:stutllib';