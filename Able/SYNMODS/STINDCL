/* STINDCL $Title Sample-to-Memory Input Handler Declaration and Library   Modified:   08/19/88 - MWH - Add "real" DSP user interface   04/14/88 - MWH - Move GET.SAMPLE.TIME and PARSE.TOKEN to STINSOU   */dcl stm.anchor.set             fixed external;             /* if the mouse anchor point is set */dcl MOUSE.PLAYING              fixed external;             /* if in the midst of mouse playback */dcl stm.mousex                 fixed external;             /* current mouse position during mouse playback */dcl LANDSCAPE.ADJUST           fixed external;             /* if fooling around with the landscape display */dcl STM.SOUND.EDITOR.INPUT     proc(fixed,fixed) external; /* Sample-to-Memory Sound Editor character handler */dcl STM.SOUND.EDITOR.MOUSE.POS proc(fixed,fixed,fixed) external; /* Mouse Positioner */dcl DRAW.MOUSE.PB.CURSOR       proc(fixed) external;       /* draws the mouse playback cursor at the current mouse position in specified channel*/dcl PERFORM.MOUSE.PLAYBACK     proc(fixed) external;       /* play back the sound file using the mouse */dcl ADJUST.LANDSCAPE.DISPLAY   proc(fixed) external;       /* adjust the landscape display */dcl PARSE.TOKEN                proc(array) returns(fixed) external; /* determines if parameter is a symbol or time value */dcl GET.SAMPLE.TIME            proc(array,array) returns(fixed) external; /* gets the token sample time and puts result in some.time */dcl TIME.SCALE.MODIFY          proc(fixed,fixed) external; /* time compress or expand a sound file */library ':syntlibs:stinlib';