/* INDEXDCL -- Index File Update Routines */dcl FileList     fixed external; /* file variable for file list  */dcl CatList      fixed external; /* file variable for category list */dcl I$IndexStart fixed external; /* sector offset of file list index */dcl I$IndexCount fixed external; /* no. entries in file list index */dcl I$FileStart  fixed external; /* sector offset of file list */dcl I$FileCount  fixed external; /* no. entries in file list */dcl I$CatStart   fixed external; /* sector offset of category list */dcl I$CatCount   fixed external; /* no. entries in catetgory list */dcl I$EntryCount fixed external; /* no. directory entries on optical disk */dcl I$Stride     fixed external; /* file list index stride */dcl DefineFileBuffers  proc(fixed,fixed,fixed,fixed,fixed,fixed) external; /* define index file buffers */dcl Get_Index_Name     proc(fixed array,fixed array) external; /* construct index file tree name */dcl Mount_Volume       proc(fixed) returns (boolean) external; /* mount volume */dcl Check_Volume       proc(fixed) returns (boolean) external; /* see if volume has changed */dcl Check_Index        proc returns (boolean) external; /* see if index has changed */dcl Open_Optical       proc(fixed array,fixed) returns (boolean) external; /* open volume and index file */dcl Check_Optical      proc(fixed) returns (boolean) external; /* see if optical system is still open */dcl Update_Index_File  proc(fixed array,fixed) returns (boolean) external; /* save index to disk */dcl Index_Locate       proc(fixed array,fixed array,fixed) returns (boolean) external; /* locate file using index file */dcl Index_Replace      proc(fixed array,fixed,fixed,fixed,fixed,fixed array,fixed array,fixed) returns (boolean) external; /* replace file using index file */dcl Index_Delete       proc(fixed array,fixed array,fixed) returns (boolean) external; /* delete file using index file */dcl Index_Update       proc(fixed array,fixed array,fixed array,fixed array,fixed) returns (boolean) external; /* update file using index file */dcl Mount.Optical.Volume proc returns (boolean) external; /* called from real time code before loading sound files from optical disk */dcl Optical.Disk.Ready  fixed external; /* Non-Zero if ok to do Optical operations, else 0 */library ':synlibs:globlib';    /* put glob mod first so examount gets set */library ':synlibs:xmemlib';   library ':-xpl:libs:scsiswap'; /* scsi swap routines                      */library ':-xpl:libs:scsicmds';library ':-xpl:libs:catswap';  /* set catbuf here once                    */library ':-xpl:libs:fileswap'; /* file swap init (also sets catbuf)       */library ':-xpl:libs:optical';  /* init optical disk items                 */library ':synlibs:indexlib';   /* do syncl init code for opt disk         */