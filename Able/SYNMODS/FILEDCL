/* FILEDCL - SYNCLAVIER FILE.SEARCH ROUTINE *//* MODIFIED:   11/04/91 - PF  - Added 'Quick Update' feature   06/05/89 - TSS - Added MAPSFILE dcl   11/16/88 - TSS - Added DEFSFILE dcl*/DCL BNKDATA  DATA EXTERNAL;DCL NEWDATA  DATA EXTERNAL;DCL PATDATA  DATA EXTERNAL;DCL SQ0DATA  DATA EXTERNAL;DCL DEFSFILE DATA EXTERNAL;DCL InfoFileName 			lit 	'''.SINF-7''';DCL MapFileName 			lit	'''.SMAP-7''';DCL CueFileName 			lit 	'''.SCUE-7''';DCL PolyFileName			lit 	'''.SPLY-7''';DCL FILE.SEARCH            PROC(FIXED ARRAY,FIXED,FIXED,FIXED,FIXED) RETURNS (BOOLEAN) EXTERNAL;DCL FCACHE.PTR             FIXED EXTERNAL;   /* ( 1) ONE SECTOR FOR FLOPPY CACHE         */DCL FLOPPY.CACHE.NUM       FIXED EXTERNAL;   /* CACHE NUMBER FOR FLOPPY */DCL FLOPPY.CACHE.VALID     FIXED EXTERNAL;   /* TRUE IF FLOPPY CAT IS CACHED */DCL DRIVE.SELECT.ACTIVE    FIXED EXTERNAL;   /* TRUE WHEN DRIVE SELECT IS PRESSED */DCL DRIVE.SELECT.COUNT     FIXED EXTERNAL;   /* STACKS UP MULTIPLE DRIVE SELECT PRESSES */DCL ACTIVE.LEVEL         FIXED EXTERNAL;     /* LEVEL OF ACTIVE CATALOG */DCL PRESS.DSEL.BUTTON    PROC  EXTERNAL;    DCL RELEASE.DRIVE.SELECT PROC  EXTERNAL; DCL SETUP.FLOPPY.CACHE   PROC  EXTERNAL;     /* SET UP CACHE FOR FLOPPY DIRECTORY */DCL MAP.LEVEL            PROC(FIXED) EXTERNAL;  /* MAP LEVEL TO DEVICE */dcl Parse.Treename.String proc (Array, Array, Array) external;dcl Extract.Filename      proc (Array, Array) returns (fixed) external;/* base, itemlen, items, bitinfo */dcl Filter.Cat.Buffer.By.Filetype  proc  (fixed, fixed, fixed, fixed) external;dcl Sort.Cat.Buffer.By.Filename proc (fixed, fixed, fixed) external; /* base, itemlen # of items *//* base, itemlen, items, dir, file, outfile, bitinfo */dcl Find.Next.Sorted.Filename proc (fixed, fixed, fixed, fixed, array, array, fixed) external;library ':synlibs:globlib';    /* put glob mod first so examount gets set */library ':synlibs:xmemlib';   library ':-xpl:libs:scsiswap'; /* scsi swap routines                      */library ':-xpl:libs:scsicmds';library ':-xpl:libs:catswap';  /* set catbuf here once                    */library ':-xpl:libs:fileswap'; /* file swap init (also sets catbuf)       */library ':synlibs:filelib';    /* now set our catbufs for real            */