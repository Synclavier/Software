/* XMEMDCL -- EXTERNAL MEMORY UTILITY MODULE */DCL COPY.BUF         ARRAY  EXTERNAL;     /* BUFFER USED BY COPY ROUTINES - CAN BE USED BY OTHERS WITH CARE */DCL DISKIO.INFO      ARRAY  EXTERNAL;     /* INFO USED BY POLYREAD, POLYWRITE, EXTREAD, EXTWRITE            */DCL COPY.IN          PROC(FIXED, FIXED) EXTERNAL;    /* COPY BLOCK INTO MAIN MEMORY - SET UP MAM & MAL BEFORE CALLING */DCL COPY.OUT         PROC(FIXED, FIXED) EXTERNAL;    /* COPY BLOCK TO EX MEM - SET UP MAM & MAL BEFORE CALLING */DCL COPY.EXT.MEM     PROC(FIXED,FIXED,FIXED,FIXED,FIXED) EXTERNAL;  /* HIGH SPEED COPIES - COPIES UP OR DOWN, ANY LENGTH, IN EXTERNAL MEMORY */DCL COPY.EXT.MEM.SEC PROC(FIXED, FIXED, FIXED) EXTERNAL;  /* SECTOR BOUNDARIES & LENGTH  */DCL EXT.READDATA     PROC(FIXED,FIXED,FIXED,FIXED,FIXED,FIXED) EXTERNAL; /* DISKREAD DIRECTLY INTO EXT MEMORY */DCL EXT.WRITEDATA    PROC(FIXED,FIXED,FIXED,FIXED,FIXED,FIXED) EXTERNAL; /* DISKWRITE DIRECTLY INTO EXT MEMORY */INSERT  ':SYNAUXS:XMEMLITS'; /* LITERALS FOR THIS MODULE       */LIBRARY ':SYNLIBS:XMEMLIB';  /* ACCESS THE CODE ITSELF         */