/*	$TITLE STEDDCL -- external declarations and library for STM sound editing routines	*//*2002/03/25 - TY  - Added Monoize_Stereo_Soundfile()	04/27/88 - MWH - Move some procedures (STEDSOUE) since STEDLIB is too big	04/14/88 - MWH - Allow different crossfades at start and end	04/13/88 - MWH - Add fade in and fade out to extract	03/16/88 - MWH - Add LOD wave display data compression and transfer	03/14/88 - TSS - Made GET.SAMPLE.TIME public	02/12/88 - MWH - Improve crossfade handling	08/24/87 - MWH - Merge with other release-N edits	08/07/87 - MWH - Update all to support max 4 poly bins, 512mb/bin	02/10/87 - BSW - created this file*/	dcl mstart	data external;	/*	mark start symbol	*/	dcl mend		data external;	/*	mark end symbol	*/	dcl CREATE.SOUND.FILE			proc(fixed,fixed,fixed,fixed) external;	/*	creates a sound file in poly	*/	dcl CREATE.NAMED.SOUND.FILE	proc(array,fixed,fixed,fixed,fixed) external;	/*	pass name array, #secs total, srate, true=skip zero out of sf, stereo	*/	dcl UNSAVE.SOUND.FILE			proc(fixed array) external;	/*	unsave a file, only if type is SOUND.F or SPECTRAL.F	*/	dcl SAVE.SOUND.FILE				proc(fixed array,fixed array) external;	/*	saves current sound file on disk*/	dcl ADD_MARK						proc(fixed array,fixed array,fixed array) external;	/*	adds mark start, mark end, or mark offset label at given cursor time	*/	dcl REMOVE_SYMBOL					proc(fixed array,fixed array) external;	/*	remove given symbol from symbol table 1-> successful*/	dcl ADD_SYMBOL						proc(fixed array,fixed array,fixed array) external;	/*	Adds a symbol to the sound file symbol table 1-> successful*/	dcl ADD_CAPTION					proc(fixed array,fixed array) external;	/*	adds caption to sound file header	*/	dcl LOCK.SOUND.FILE				proc external;	/*	locks a sound file (assuming FNBUF) in the right channel window	*/	dcl UNLOCK.SOUND.FILE			proc external;	/*	unlocks a sound file from the right channel window	*/	dcl SET.RESOLUTION				proc external;	/*	sets drawing resolution	*/	dcl SET.CROSSFADE					proc external;	/*	sets crossfade time	*/	dcl SEARCH.FOR.AMPLITUDE		proc (fixed array) external;	/*	searches for first occurrence of specified amplitude	*/	dcl SHOW.SOUND.FILE				proc (fixed array) external;	/*	shows the sound file from the specified location	*/	dcl MOVE.THROUGH.SOUND.FILE	proc (fixed) external;	/*	moves cursor through sound file	*/	dcl LEFT.SAMPLE					proc external;	/*	puts sample on which cursor lies at left edge of display window	*/	dcl CENTER.SAMPLE					proc (fixed array) external;	/*	centers sample within the window	*/	dcl RENAME.SOUND.FILE			proc(fixed array,fixed array) external;	dcl REVERSE.SOUND.FILE			proc(fixed array) external;	dcl COMBINE.SOUND.FILES			proc external;	/*	combines two mono sampled sound files	*/	dcl Monoize_Stereo_Soundfile	proc (fixed array) external;	dcl EXCHANGE.STEREO.SOUND		proc (fixed array) external;	/*	exchange Left with Right of stereo sound	*/	dcl EXTMONO.SOUND.FILE			proc (fixed array) external;	/*	extract mono sound file from stereo file	*/	dcl DELETE.SAMPLES				proc (fixed array,fixed) external;	/*	deletes a section of the sound file	*/	dcl EXTRACT.SAMPLES				proc (fixed array,fixed,fixed) external;	/*	extracts the specified section of the current sound file and puts contents in a new sound file	*/	dcl CUT.SAMPLES					proc (fixed array,fixed,fixed) external;	/*	cuts samples from a given file and puts them in another file	*/	dcl PASTE.SAMPLES					proc (fixed array) external;	/*	pastes samples at cursor location	*/	dcl COPY.SAMPLES					proc (fixed array,fixed,fixed) external;	/*	copy specifed samples into .COPYBUF	*/	dcl FILL.SAMPLES					proc (fixed array,fixed) external;	/*	fill specifed area with .EDITBUF or sound file	*/	dcl LOOP.SOUND.FILE				proc (fixed array,fixed) external;	/*	loop sound file	*/	dcl VOLUME.CONTROL				proc (fixed array) external;			/*	dynamically scale signal level	*/	dcl NORMALIZE						proc (fixed array) external;			/*	normalizes the volume	*/	dcl REVERSE.LOOP					proc (fixed array,fixed) external;	/*	reverses the loop between two selected points	*/	dcl MIX.OR.MODULATE.SF			proc (fixed array, fixed) external;	/*	mixes or modulates two sound files	*/	dcl INVERT.SOUND.FILE			proc (fixed array) external;			/*	inverts the sound file	*/	dcl DC.TRIM.SOUND.FILE			proc (fixed array) external;			/*	finds the dcoffset and shifts the sound file by that amount	*/library ':syntlibs:stedlib';