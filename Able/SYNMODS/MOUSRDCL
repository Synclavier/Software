/* MOUSRDCL  $TITLE  MOUSE REAL TIME MODULE *//* Modifications:   04/01/88 - TSS - Added support for MAC II mouse from Termulator*//* VARIABLES USED BY REAL TIME MOUSE SCAN */DCL MOUSE.READY                  FIXED EXTERNAL;  /* 1 => MOUSE USABLE, 0 => NO MOUSE RUNNING YET */DCL MOUSE.STATUS.REQUEST         FIXED EXTERNAL;  /* SET TO 1 TO REQUEST NEW STATUS BYTE FROM MOUSE */DCL MOUSE.REAL.MILLISECONDS      FIXED EXTERNAL;  /* TIME OF X/Y POSITION MEASUREMENT */DCL MOUSE.X                      FIXED EXTERNAL;  /* MOUSE X POSITION; RANGE SET BY MOUSE.X.MIN,MOUSE.X.MAX */DCL MOUSE.Y                      FIXED EXTERNAL;  /* MOUSE Y POSITION; RANGE SET BY MOUSE.Y.MIN, MOUSE.Y.MAX */DCL MOUSE.DX                     FIXED EXTERNAL;  /* DELTA X */DCL MOUSE.DY                     FIXED EXTERNAL;  /* DELTA Y */DCL (MOUSE.X.MIN,MOUSE.X.MAX)    FIXED EXTERNAL;  /* SET BY USER; DEFINE RANGE FOR MOUSE.X */DCL (MOUSE.Y.MIN,MOUSE.Y.MAX)    FIXED EXTERNAL;  /* SET BY USER; DEFINE RANGE OF MOUSE.Y */DCL MOUSE.STATUS                 FIXED EXTERNAL;/* INTERNAL TO MOUSE ROUTINES */DCL MOUSE.COMMAND         FIXED EXTERNAL;  /* LAST COMMAND SENT TO MOUSE; SHOULD BE SET IMMEDIATELY AFTER SENDING ANY COMMND TO MOUSE *//*                                          NOTE: MOUSE.COMMAND LITERALS ARE DEFINED IN 040-GLIT */DCL MOUSE.BUFFER         ARRAY EXTERNAL;  /* BUFFER TO HOLD INCOMING MOUSE DATA */DCL MOUSE.XMIT.DONE      FIXED EXTERNAL;  /* FLAG - INPUT FROM MOUSE RECEIVED *//* VARIABLES USED FOR MOUSE(n) FUNCTION */DCL M$PRESSES             FIXED EXTERNAL;  /* ACCUMULATED BUTTON PRESSES */DCL M$RELEASES            FIXED EXTERNAL;  /* ACCUMULATED BUTTON RELEASES */DCL M$BS                  FIXED EXTERNAL;  /* BUTTONS STATUS */DCL M$PT                  ARRAY EXTERNAL;  /* TIME OF LAST BUTTON PRESS FOR EACH BUTTON */DCL M$PX                  ARRAY EXTERNAL;  /* X POSITION AT MOUSE PRESS (ALL 3 BUTTONS) */DCL M$PY                  ARRAY EXTERNAL;  /* Y POSITION AT MOUSE PRESS */DCL M$RT                  ARRAY EXTERNAL;  /* TIME OF LAST BUTTON RELEASE FOR EACH BUTTON */DCL M$RX                  ARRAY EXTERNAL;  /* X POSITION AT MOUSE RELEASE */DCL M$RY                  ARRAY EXTERNAL;  /* Y POSITION AT MOUSE RELEASE */DCL MOUSE.LOOKUP DATA EXTERNAL;DCL MOUSE.SCAN.AND.POLL PROC EXTERNAL;     /* CALL APPROX EVERY 20 MSEC */LIBRARY ':SYNLIBS:MOUSRLIB';   /* MOUSE REAL TIME CODE */