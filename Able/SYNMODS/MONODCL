/* MONODCL -- module for mono sampling playback from disk */DCL D66.SUSPENDED    FIXED EXTERNAL;   /* true if d66 interrupts have been suspended due to rotary buffer becomming empty.  software must re-enable d66 interrupts once more data has arrived from the w. disk */DCL STOP.MONO.IO     FIXED EXTERNAL;   /* set this flag to nonzero to keep new mono sampling notes from starting */DCL POLL.MONO.IO     FIXED EXTERNAL;   /* set this flag to poll for D66  interrupts */DCL POLL.SCSI.IO     FIXED EXTERNAL;   /* set this flag to poll for SCSI interrupts */DCL OUTPUT.ACTIVE    FIXED EXTERNAL;   /* nonzero if output happeing.  see comments on source */DCL STOP.OUTPUT      FIXED EXTERNAL;   /* set to stop output */DCL ABUF.INDEX       FIXED EXTERNAL;   /* used to manage size of attack */DCL ABUF.DATA        DATA  EXTERNAL;   /* buffers in syncl program      */DCL ABORT.IO            PROC EXTERNAL; /* so other procedures in this */DCL START.W.DISK.OUTPUT PROC EXTERNAL; /* module can be local         */DCL MONO.SEC         FIXED EXTERNAL;   /* must set this pointing to external memory sector containing sound file information */DCL MONO.CVAL        FIXED EXTERNAL;   /* "current value" of software created volume envelope */DCL MONO.VOL         FIXED EXTERNAL;   /* initial volume level to use for playback */DCL MONO.PD          FIXED EXTERNAL;   /* initial pitch period to use for mono playback */library ':synlibs:globlib';            /* library glob mod first to get examount set up */library ':synlibs:monolib';