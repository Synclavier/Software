or.scale    fixed external;  /* previous number of samples per pixel */   dcl prev.stm.hor.factor   fixed external;  /* previous horizontal scaling factor */   dcl saving.current        fixed external;  /* 1 -> if saving current sound file */   dcl replace.file          fixed external;  /* 1 -> if replacing a sound file */   dcl pasting.edit          fixed external;  /* 1 -> if pasting edit buffer into sound file */   dcl fill.file             fixed external;  /* 1 -> if a filename has been specified */   dcl cross.loop            fixed external;  /* 1 -> if using the default crossfade time */   dcl unlabeling.current    fixed external;  /* 1 -> if unlabeling symbol at current cursor location */   dcl mix.level             fixed external;  /* 1 -> if mixing with the default volume level */   dcl stm.max.tlen           fixed external; /* maximum token length for command attributes */   dcl stm.record.choice      fixed external; /* current menu selection  */   dcl stm.last.record.choice fixed external; /* previous menu selection */   dcl stm.draw.mode          fixed external; /* 0 = normal (vector), 1 = point */   dcl stm.is.drawing         fixed external; /* 0 = not drawing, 1 = is */   dcl stm.zero.line          fixed external; /* 0 = not there, 1 = there */   dcl tsm.algorithm          fixed external; /* current setting of switch */   dcl tsm.ratio              fixed external; /* value: * 10000 */   dcl tsm.option             fixed external; /* cursor is on */   dcl tsm.last.option        fixed external; /* previous cursor option */   dcl tsm.max.option         fixed external; /* max value of tsm.option */   dcl tsm.period             fixed external; /* fundamental period */   dcl tsm.max.cut.samples    fixed external; /* maximum cut allowed (samples) */   dcl tsm.justification      fixed external; /* 1-10 */   dcl debug.function         fixed external; /* DSP debug function switch */   dcl debug.option           fixed external; /* cursor is on              */   dcl debug.last.option      fixed external; /* previous cursor option    */   dcl debug.max.option       fixed external; /* max value of debug.option */   dcl debug.length           array external; /* SFTime array for debug    */   dcl debug.toggle           fixed external; /* Toggle for peak memory space */   dcl debug.start            fixed external;   dcl debug.repeat           fixed external;   dcl debug.srate            fixed external;   dcl time.per.lpixel        array external; /* milliseconds/pixel for landscape display */   dcl ERASE.LEFT.CHANNEL.LABEL      proc external;   dcl ERASE.RIGHT.CHANNEL.LABEL     proc external;   dcl DRAW.LEFT.CHANNEL.LABEL       proc external;   dcl DRAW.RIGHT.CHANNEL.LABEL      proc external;   dcl DRAW.GRAPHICS.CURSORS         proc(fixed,fixed) external;      /* draw the graphics cursors */   dcl ERASE.GRAPHICS.CURSORS        proc(fixed,fixed) external;   dcl DRAW.RIGHT.CHANNEL.SYMBOLS    proc external;    /* draws the symbols of the right channel */   dcl ERASE.SOUND.FILE.VERT.FACTOR  proc external;    /* erases current sound file vertical scale factor */   dcl DRAW.SOUND.FILE.VERT.FACTOR   proc external;    /* draws current vertical sound file scale factor */   dcl ERASE.SOUND.FILE.HOR.FACTOR   proc external;    /* erases current sound file horizontal scale factor */   dcl DRAW.SOUND.FILE.HOR.FACTOR    proc external;    /* draws current horizontal sound file scale factor */   dcl DRAW.RESOLUTION               proc external;    /* draws drawing resolution*/   dcl DRAW.CROSSFADE                proc external;    /* draws current sound file crossfade*/   dcl ERASE.LOCK.NAME               proc external;    /* erases current sound file name */   dcl DRAW.LOCK.NAME                proc external;    /* draws sound file name */   dcl ERASE.SOUND.FILE.NAME         proc external;    /* erases current sound file name */   dcl DRAW.SOUND.FILE.NAME          proc (fixed array) external;   /* draws sound file name */   dcl ERASE.SOUND.FILE.CAPTION      proc external;    /* erases current sound file caption */   dcl DRAW.SOUND.FILE.CAPTION       proc external;    /* draws sound caption */   dcl ERASE.SOUND.FILE.LENGTH       proc external;    /* erases current sound file length */   dcl DRAW.SOUND.FILE.LENGTH        proc external;    /* draws current sound file length */   dcl CHANGE.CURSOR.TIME            proc external;    /* converts the address pointed to by cursor location to a sample time */   dcl CHANGE.ZOOM.TIME              proc external;    /* leaves sample under cursor while zooming */   dcl CHANGE.SIGNAL.LEVEL           proc external;    /* computes the signal level of the current sample and displays it */   dcl ERASE.LANDSCAPE.CONTROL       proc external;    /* erases the landscape display */   dcl DRAW.LANDSCAPE.CONTROL        proc external;    /* draw the landscape */   dcl COMPUTE.NEW.LANDSCAPE         proc(fixed,fixed,array) external;   dcl DRAW.ZERO.LINE                proc(fixed,fixed,fixed) external;   dcl ERASE.SAMPLES                 proc(fixed,fixed,fixed) external;   dcl ERASE.COMMAND.MENU            proc external;    /* erase command menu */   dcl DRAW.COMMAND.MENU             proc external;    /* draw command menu */   dcl ERASE.COMMAND.PROMPT          proc(fixed) external; /* erases command prompt */   dcl DRAW.COMMAND.PROMPT           proc(fixed) external; /* draws command prompt */   dcl ERASE.COMMAND.LETTERS         proc external;     /* erase the command letters */   dcl POS.STM.ALPHA.CURSOR          proc external;   dcl SED.COMMAND.ATTRIBUTE.DEPOSIT proc external;    /* parses parameter and updates sound file */   dcl CHANGE.RECORD.MENU            proc (fixed) external; /* changes the record menu selections */   dcl CHANGE.TSM.MENU               proc (fixed) external; /* changes the TSM menu selections */   dcl CHANGE.DEBUG.MENU             proc (fixed) external; /* changes the Debug menu */   dcl STM.SOUND.EDITOR.DISP         proc external;    /* draws Sample-To-Memory Sound Editor Screen */   dcl UPDATE.SOUND.EDITOR.DISP      proc returns (fixed) external; /* returns 1 if display update interrupted */library ':syntlibs:stdrlib';  /* library the STM drawing routines */