/* PLOTLITS */

/* special mode inidicators for plot library */

dcl #transparent     lit '0';
dcl #alpha           lit '1';
dcl #vector          lit '2';
dcl #point           lit '3';

dcl point_mode       lit 'call enter.point.mode';
dcl vector_mode      lit 'call enter.vector.mode';
dcl transparent_mode lit 'call enter.transparent.mode';
dcl alpha_mode       lit 'call enter.alpha.mode';


/* literals for DATA_LEVEL */

dcl #dots.on         lit '0'; /* draw on         */
dcl #dots.off        lit '1'; /* erase mode      */
dcl #dots.comp       lit '2'; /* complement mode */
