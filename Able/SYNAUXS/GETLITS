/* GETLITS   $TITLE Literals for get.next.event *//*   06/27/89 - cj  - Moved many events around for release 2.2   10/14/87 - MWH - Add "info" literals for mouse button events    2-26-87 - TSS - Added Get.Screen.Event to event literals    2-15-87 - MPB - Added Get.Arrow.Key event to Get.Next.Event*//* The Synclavier Operating System generates 9 words of event             *//* information.   These 9 words can be sent to the ABLE screen software,  *//* the D50 termulator, or any of the protocol devices.                    */dcl  num.of.OS.events     lit '16';     /* number of Op Sys events        */dcl  get.OS.timbre.info   lit ' 0';     /* get new.timbre.info   events   */dcl  get.OS.seq.info      lit ' 1';     /* get new.seq.info      events   */dcl  get.OS.entry.writes  lit ' 2';     /* get new.entry.writes  events   */dcl  get.OS.prm.info      lit ' 3';     /* get new.prm.info      events   */dcl  get.OS.dtd.info      lit ' 4';     /* get new.dtd.info      events   */dcl  get.OS.poly.contents lit ' 5';     /* get new.poly.contents events   */dcl  get.OS.ertyp         lit ' 6';     /* get new.ertyp         events   */dcl  get.OS.smpte.event   lit ' 7';     /* get new.smpte.event   events   */dcl  get.OS.clavier.info  lit ' 8';     /* get new.clavier.info  events   */                                        /* Other event words are unused   */                                        /* at this time.                  *//* The ABLE Screen Manager and it's Get.Next.Event routine can generate   *//* 18 possible event words,  which include all of the 9 OS words:         */dcl  num.of.get.events    lit '18';     /* num of events 1-x               */dcl  get.null.event       lit ' 0';     /* zero event                      */dcl  get.in.char          lit ' 1';     /* input character typed           */dcl  get.mouse.button     lit ' 2';     /* mouse press/release             */dcl  get.mouse.movement   lit ' 3';     /* mouse movement                  */dcl  get.new.timbre.info  lit ' 4';     /* new kbd timbre/partial          */dcl  get.spare1.info      lit ' 5';     /* spare (unused)                  */dcl  get.new.seq.info     lit ' 6';     /* new seq notes/consts            */dcl  get.play.scrolling   lit ' 7';     /* window boundaries               */dcl  get.entry.writes     lit ' 8';     /* a screen timbre name chg        */dcl  get.prm.info         lit ' 9';     /* timbre parameter change         */dcl  get.dtd.info         lit '10';     /* direct to disk info             */dcl  get.poly.contents    lit '11';     /* change in poly memory           */dcl  get.ertyp            lit '12';     /* error message needed            */dcl  get.smpte.event      lit '13';     /* new smpte time available for display */dcl  get.arrow.key        lit '14';     /* arrow key typed                 */dcl  get.screen.event     lit '15';     /* screen manager meta-event       */dcl  get.program.exit     lit '16';     /* one of the program exit keys pressed */dcl  get.dtd.scrolling    lit '17';     /* get scrolling from dtd while it is playing */dcl  get.new.clavier.info lit '18';     /* new clavier panel status        *//* bit literals for the above event types */dcl  get#in.char         lit '00001';     /* input character typed     */dcl  get#mouse.button    lit '00002';     /* mouse press/release       */dcl  get#mouse.movement  lit '00004';     /* mouse movement            */dcl  get#new.timbre.info lit '00008';     /* new kbd timbre/partial    */dcl  get#new.seq.info    lit '00032';     /* new seq notes/consts      */dcl  get#play.scrolling  lit '00064';     /* window boundaries         */dcl  get#entry.writes    lit '00128';     /* a screen timbre name chg  */dcl  get#prm.info        lit '00256';     /* timbre parameter change   */dcl  get#dtd.info        lit '00512';     /* direct to disk info       */dcl  get#poly.contents   lit '01024';     /* change in poly memory     */dcl  get#ertyp           lit '02048';     /* error message needed      */dcl  get#smpte.event     lit '04096';     /* new smpte time available for display */dcl  get#arrow.key       lit '08192';     /* arrow key typed           */dcl  get#screen.event    lit '16384';     /* screen manager meta-event */dcl  get#program.exit    lit '32768';     /* one of the program exit keys pressed *//* Info literals for get.mouse.button */dcl  mou#right.down      lit '-1';     /* Right  mouse button down  */dcl  mou#middle.down     lit '-2';     /* Middle mouse button down  */dcl  mou#left.down       lit '-3';     /* Left   mouse button down  */dcl  mou#right.up        lit ' 1';     /* Right  mouse button up    */dcl  mou#middle.up       lit ' 2';     /* Middle mouse button up    */dcl  mou#left.up         lit ' 3';     /* Left   mouse button up    */