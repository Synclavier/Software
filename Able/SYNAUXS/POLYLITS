/* POLYLITS   $TITLE  Literals used for accessing poly memory   Modified:   07/02/87 - MWH - Author   *//* THIS IS THE STRUCTURE OF A 32 BIT POLY MEMORY POINTER: * *                 +-----------------------------+ *  DATA PRESENT-->| BIN | UNUSED   |STEREO|PAGE | BASE.MSB * BITS IN FIELD-->|..2..|....9.....|..1...|..4..| *                 |-----------------------------| *                 | LEAST SIGNIFICANT PTR BITS  | BASE.LSB *                 |.............16..............| *                 +-----------------------------+ * * THE ADDRESS IS FORMED BY THE 4 "PAGE" BITS (MSB'S) AND THE 16 LSB'S. * NOTE THAT "STEREO" IS A BIT POSITION RESERVED FOR USE IN THE * KEYBOARD LOOKUP TABLES, AND DOES NOT PROVIDE ANY ADDRESS INFORMATION. * THE 2 "BIN" BITS INDICATE WHICH OF 4 POSSIBLE POLY BINS IS TO BE * ACCESSED. * *//* THE FOLLOWING LITERALS ARE USED TO MANIPULATE 32 BIT POLY POINTERS */DCL BASE#PAGE_B     LIT   '     "17" ';  /* MASK FOR THE PAGE BITS    */DCL BASE#PAGE_P     LIT   '       0  ';  /* PAGE BITS POSITION        */DCL BASE#STEREO_B   LIT   '     "20" ';  /* MASK FOR THE STEREO BIT   */DCL BASE#STEREO_P   LIT   '       4  ';  /* STEREO BIT POSITION       */DCL BASE#BIN_B      LIT   ' "140000" ';  /* MASK FOR THE BIN BITS     */DCL BASE#BIN_P      LIT   '      14  ';  /* BIN BITS POSITION         */DCL BASE#ONLY       LIT   ' "140017" ';  /* MASK TO GET BIN/PAGE ONLY *//*  THESE LITERALS ARE USED WITH PROCEDURES "SET.CUR.BIN" AND *  "SET.BIN.FROM.BASE" TO MAKE IT EASIER TO ACCESS MULTI-BIN *  DATA STRUCTURES. */DCL PSFIRST         LIT 'LOC(ADDR(PSFIRSTS(#CBINCODE       )))';DCL PSFIRST.MSB     LIT '         PSFIRSTS(#CBINCODE+LW#MSB)  ';DCL PSFIRST.LSB     LIT '         PSFIRSTS(#CBINCODE+LW#LSB)  ';DCL PSLAST          LIT 'LOC(ADDR(PSLASTS(#CBINCODE       )))';DCL PSLAST.MSB      LIT '         PSLASTS(#CBINCODE+LW#MSB)  ';DCL PSLAST.LSB      LIT '         PSLASTS(#CBINCODE+LW#LSB)  ';DCL PSMAX           LIT 'LOC(ADDR(PSMAXS(#CBINCODE       )))';DCL PSMAX.MSB       LIT '         PSMAXS(#CBINCODE+LW#MSB)  ';DCL PSMAX.LSB       LIT '         PSMAXS(#CBINCODE+LW#LSB)  ';DCL PSFREE          LIT 'LOC(ADDR(PSFREES(#CBINCODE       )))';DCL PSFREE.MSB      LIT '         PSFREES(#CBINCODE+LW#MSB)  ';DCL PSFREE.LSB      LIT '         PSFREES(#CBINCODE+LW#LSB)  ';DCL PSHERE          LIT 'LOC(ADDR(PSHERES(#CBINCODE       )))';DCL PSHERE.MSB      LIT '         PSHERES(#CBINCODE+LW#MSB)  ';DCL PSHERE.LSB      LIT '         PSHERES(#CBINCODE+LW#LSB)  ';DCL POLYAMOUNT      LIT 'LOC(ADDR(POLYAMOUNTS(#CBINCODE       )))';DCL POLYAMOUNT.MSB  LIT '         POLYAMOUNTS(#CBINCODE+LW#MSB)  ';DCL POLYAMOUNT.LSB  LIT '         POLYAMOUNTS(#CBINCODE+LW#LSB)  ';